function embedClick(){
	if (embedOpen == false){
		embedDown();
		return false;
	}else{
		embedUp();
		return false;
	}
}
function embedUp(){
	$('#embed-box').slideUp('fast');
	$("#description-box").animate({
		height: '-=120'
	}, 200);
	embedOpen = false;
}
function embedDown(){
	if (embedOpen == false){
		$('#embed-box').show();
		$('#embed-box').slideDown('fast');
		$("#description-box").animate({
			height: '+=120'
		}, 200);
		embedOpen = true;
	}

}
