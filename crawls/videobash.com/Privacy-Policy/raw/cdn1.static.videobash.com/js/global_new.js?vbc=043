function get_short_url(url)
{
	$.getJSON(
		"http://api.bitly.com/v3/shorten?callback=?", 
		{ 
		    "format": "json",
		    "apiKey": "R_84acf6173d1a9484ccb46bc1e55a9321",
		    "login": "videobash",
		    "longUrl": url
		},
		function(response)
		{
		    $("#link-url").val(response.data.url);
		}
	);
}
