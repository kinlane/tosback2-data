
/**
 * Returns the pathname, as it would be without hashbang.
 */
locationPathname = function(href) {
    if(typeof href == 'undefined')
        href = location.href;

    var path = href.replace(/^http:\/\/.+\.com/, '');

    if(path.indexOf("#.") != -1) {
        return path
            .replace(/\/?#\./, '')
            .split(/[\?#]/)[0];
    }
    else if(path.indexOf("#") == 0) {
        return path
            .replace(/\/?#/, '')
            .split(/[\?#]/)[0];
    }
    else {
        return location.pathname;
    }
};


