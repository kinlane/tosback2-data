    function toTitleCase(str){
      return str.replace(/\w\S*/g, function(txt){return txt.charAt(0).toUpperCase() + txt.substr(1).toLowerCase();});
    }

    function exactTargetApi(etData) {
      log("exactTargetApi() called...");

      var url = "http:/"+"/fh.suntimes.com/newsletters/index_jsonp.php";
      switch(domain) {
        case 'dev.suntimes.com':
        case 'dev.chicagogrid.com':
          url = "http:/"+"/fh.suntimes.com/newsletters/index_jsonp_dev.php";
          break;
      }

      $.ajax({
        url: url
        ,data: etData
        ,type: 'GET'
        ,jsonpCallback: 'jsonpCallback'
        ,contentType: "application/json"
        ,dataType: 'jsonp'
        ,success: function(json) {
          console.log(json);
          updateNewsletters(json);
        }
        ,error: function(e) {
          console.log(e);
        }
      });

    }

    function updateNewsletters(json) {
      log("updateNewsletters() called...");
      var response = null;
      var obj = {};
      var globalUnsubscribeHTML = "<input type=\"submit\" class=\"unsubscribe_me\" value=\"Unsubscribe from all\" onclick=\"gigyaUI.globalUnsubscribe();\" /><p>Click this link to stop receiving Sun-Times Media newsletters and promotional emails.</p>";
      var noGigyaHTML = ""; //"<br/><h3>Oops!</h3><p>We're sorry, but it looks like your account is out of date. In order to access your account and subscription preferences, please login or register below.</p>";

      if( typeof json === "object" ) {
        response = json;
      } else {
        try{
          response = JSON.parse(json);
          log("ET response:");
          log(response);
        } catch(err) {
          log("JSON syntax error: "+err.message);
          log(json);
          return;
        }
      }

      if( response.complete ) {
        log("updating Gigya...");
        obj = response.data;
        log("response data:");
        log(obj);
        
        log("ET status: "+obj.Status);
        if( "Unsubscribed" == obj.Status ) { //(4) user unsubscribed from all in ET
          //disable checkboxes
          $(".newsletters-screen h3").addClass("grayedOut");
          $(".newsletters-screen h4").addClass("grayedOut");
          $(".newsletters-screen .gigya-label-text").addClass("grayedOut");
          $(".newsletters-screen .gigya-input-checkbox").attr('disabled', 'disabled');
          $(".newsletters-screen .gigya-input-submit").attr('disabled', 'disabled').addClass("grayedOut");

          $(".global_unsubscribe").html("<h3>You are currently unsubscribed from Sun-Times Media newsletters and promotional emails.</h3><p>To re-subscribe to the same newsletters and promotional emails, please click on this button:</p><input type=\"submit\" class=\"unsubscribe_me resubscribe\" value=\"Resubscribe to all\" onclick=\"gigyaUI.globalResubscribe();\" />");

        } else { //user active in ET

          //enable checkboxes
          $(".newsletters-screen h3").removeClass("grayedOut");
          $(".newsletters-screen h4").removeClass("grayedOut");
          $(".newsletters-screen .gigya-label-text").removeClass("grayedOut");
          $(".newsletters-screen .gigya-input-checkbox").removeAttr('disabled');
          $(".newsletters-screen .gigya-input-submit").removeAttr('disabled');
          $(".global_unsubscribe").html(globalUnsubscribeHTML+noGigyaHTML);

          var data = {};
          $.each(obj, function(key,val) {
            if( key != "GigyaVerified" && ("True" == val || "False" == val) ) {
              var fieldName = convertToFieldName(key);
              var fieldValue = ("True" == val) ? true : false; 
              //log(fieldName+": "+fieldValue);

              data[fieldName] = fieldValue;
            }
          });
          log("data fields to update in Gigya:");
          log(data);
          
          if(1 == response.action) { //(1) single unsubscribe
            if( response.gigya.complete ) { //gigya fields updated server side
              log("gigya data fields already updated server side");
              //alert( "You are now unsubscribed from "+getParameterByName("n_id") );
              fireAggregoEvent('loadSuccess','single');
            } else if(null != guid) { //logged in
              log("updating gigya data fields via js...");
              gigya.accounts.setAccountInfo({
                data: data
                ,callback: function(e) {
                  //fireAggregoEvent('loader','hide');
                  if( 0 == e.errorCode ) {
                    log("Gigya newsletter data fields updated");
                    //alert( "You are now unsubscribed from "+getParameterByName("n_id") );
                    fireAggregoEvent('loadSuccess','single');
                    window.location = window.location.protocol+'/'+'/'+window.location.host+window.location.pathname;
                  } else {
                    log("error from gigya.accounts.setAccountInfo():");
                    log(e);
                  }
                }
              });
            } else { //is not a gigya user
              log("*** NOT a gigya user ***");
              $(".global_unsubscribe").html(globalUnsubscribeHTML+noGigyaHTML);
              //alert( "You are now unsubscribed from "+getParameterByName("n_id") );
              fireAggregoEvent('loadSuccess','single');
            }
          } else if( null != guid && !$.isEmptyObject(data) ) { //(2) user logged in and data to be updated
            log("user logged in; updating info from ET to Gigya...");
            fireAggregoEvent('hideSuccess','global');
            gigya.accounts.setAccountInfo({
              data: data
              ,callback: function(e) {
                if( 0 == e.errorCode ) {
                  log("Gigya newsletter data fields updated");
                  fireAggregoEvent('newsletters.refresh',true);
                } else {
                  log("error from gigya.accounts.setAccountInfo():");
                  log(e);
                }
              }
            });
          } else { //(3) mass update
            log("Gigya does not need to be updated");
            fireAggregoEvent('hideSuccess','newsletters');  
            //alert( "Your newsletter preferences have been updated." );
          }

        }// not unsubscribed from all

      } else {
        log("response not complete");
        log(response);
        fireAggregoEvent('hideSuccess','default');
      }
    }

    function convertToFieldName(etname) {
      var field = "";
      
      //fix mismatched mappings
      switch(etname) {
        case 'Alert__Pioneer__Winetka':
        case 'Alert__Pioneer__Winnetka':
          field = 'newsletterAlertPioneerWinnetka';
          break;
          
        case 'Morning__Update':
        case 'Morning__Updates':
          field = 'newsletterMorningUpdates';
          break;
          
        case 'MsEbert':
          field = 'newsletterMsebert';
          break;
          
        default:
          field = "newsletter";
          var narry = etname.split("__");
          for( var i=0; i < narry.length; i++ ) {
            field += toTitleCase(narry[i]);
          }
          break;
      }
      
      return field;
    }

    function convertGigyaFieldsToEt(profile,profileData) {
      var settings = {};
      $.each(gigyaToEtMapping,function(gigyaField,etNewsletter) {
        if( gigyaField in profileData ) {
          settings[etNewsletter] = (profileData[gigyaField]) ? "True" : "False";
        }
      });
      return settings;
    }

    return {
      getGroup: function(pub) {
        switch(pub) {
          //pioneer press (local)
          case 'pioneerlocal':
          case 'barrington':
          case 'buffalogrove':
          case 'burrridge':
          case 'clarendonhills':
          case 'deerfield':
          case 'elmwoodpark':
          case 'evanston':
          case 'franklinpark':
          case 'glencoe':
          case 'glenview':
          case 'highlandpark':
          case 'hinsdale':
          case 'lagrange':
          case 'lakeforest':
          case 'lakezurich':
          case 'libertyville':
          case 'lincolnshire':
          case 'lincolnwood':
          case 'mortongrove':
          case 'mundelein':
          case 'niles':
          case 'norridge':
          case 'northbrook':
          case 'oakbrook':
          case 'oakpark':
          case 'parkridge':
          case 'riverforest':
          case 'skokie':
          case 'vernonhills':
          case 'westernsprings':
          case 'wilmette':
          case 'winnetka':
            return "pioneer";

          //dailies
          case 'scn':
          case 'beaconnews':    //aurora
          case 'couriernews':   //elgin
          case 'heraldnews':    //joliet
          case 'newssun':       //lake county
          case 'napervillesun': //naperville
          case 'posttrib':      //post tribune
          case 'southtownstar':
            return "dailies";

          //misc
          case 'splash':
          case 'grid':
            return 'inserts';

          //suntimes
          case 'suntimes':
          default:
            return pub;
        }
      }
      ,isNewsletterSubscriber: function(data) {
        var isSubscriber = false;

        //TODO: no need for looping?
        $.each(newsletterNames,function(index,value) {
          if( index in data && null != data[index] ) {
            isSubscriber = isSubscriber || data[index];
          }

          return !isSubscriber; //break if subscription found
        });

        return isSubscriber;
      }
      ,getNewsletterOptionsHTML: function() {
        var html = '<p style="margin:0 0 0 10px;">Newsletter settings - send the following updates:</p>';

        var newsletters = getDefaultNewsletters(pubName);
        $.each(newsletters,function(index,value) {
          var checked = (true == value) ? 'checked="checked"' : '';
          var name = '';
          if( undefined != newsletterNames[index] && null != newsletterNames[index] ) {
            name = newsletterNames[index];

          } else {
            name = pubFullName+'&nbsp;Newsletter';
          }

          html += ''
          +'<div class="gigya-composite-control gigya-composite-control-checkbox" style="display: block;">'
          +'<input name="data.'+index+'" class="gigya-input-checkbox" data-display-name="" data-gigya-name="data.'+index+'" type="checkbox" '+checked+' />'
          +'<label class="gigya-label"><span class="gigya-label-text">'
          +name
          +'</span></label></div>';

        });

        return html;
      }
      /////////////////////////
      // ExactTarget Updating
      //
      ,singleUnsubscribe: function(et_id,n_id,g_id) { //ACTION 1: SINGLE UNSUBSCRIBE
        log("singleUnsubscribe("+et_id+","+n_id+","+g_id+") called...");

        etData = {};
        etData.action = '1';
        etData.g_id   = (null == guid) ? g_id : guid;
        etData.et_id  = et_id;
        etData.n_id   = n_id;

        log("single unsubscribe info:");
        log(etData);

        exactTargetApi(etData);
      }
      ,updateGigyaFromEt: function(e) { //ACTION 2: GET SUBSCRIBER DATA
        log("updateGigyaFromEt() called...");
        if( undefined != e && null != e ) {
          log(e);

          var profile     = e.profile;
          var profileData = e.data;

          etData = {};
          etData.action  = '2';
          etData.g_id    = guid;
          etData.g_email = profile.email;
          etData.n_arr   = convertGigyaFieldsToEt(profile,profileData);
          etData.u_arr   = {
            "Email__Address": profile.email
            ,"First__Name": profile.firstName
            ,"Last__Name": profile.lastName
            ,"birthYear": profile.birthYear
            ,"Zip__Code": profile.zip
            ,"GigyaVerified": "True"
            ,"GigyaAccounts": e.socialProviders
            ,"GigyaUID": guid
          };

          log("get subscriber info:");
          log(etData);

          exactTargetApi(etData);

        } else {
          gigya.accounts.getAccountInfo({
            callback: function(e) {
              log(e);

              var profile     = e.profile;
              var profileData = e.data;

              etData = {};
              etData.action  = '2';
              etData.g_id    = guid;
              etData.g_email = profile.email;
              etData.n_arr   = convertGigyaFieldsToEt(profile,profileData);
              etData.u_arr   = {
                "Email__Address": profile.email
                ,"First__Name": profile.firstName
                ,"Last__Name": profile.lastName
                ,"birthYear": profile.birthYear
                ,"Zip__Code": profile.zip
                ,"GigyaVerified": "True"
                ,"GigyaAccounts": e.socialProviders
                ,"GigyaUID": guid
              };

              log("get subscriber info:");
              log(etData);

              exactTargetApi(etData);
            }//callback
          });//getAccountInfo
        }

      }
      ,createEtUser: function(e) {
        log("createEtUser() called...");

        var response    = e.response;
        var profile     = response.profile;
        var profileData = response.data;
        var user        = response.userinfo;

        var UID   = response.UID;
        var email = profile.email;

        etData = {};
        etData.action  = '2';
        etData.g_id    = UID;
        etData.g_email = email;
        etData.n_arr   = convertGigyaFieldsToEt(profile,profileData);
        etData.u_arr   = {
          "Email__Address": profile.email
          ,"First__Name": profile.firstName
          ,"Last__Name": profile.lastName
          ,"birthYear": profile.birthYear
          ,"Zip__Code": profile.zip
          ,"GigyaVerified": "True"
          ,"GigyaAccounts": response.socialProviders
          ,"GigyaUID": UID
        };

        log("set subscriber info:");
        log(etData);

        exactTargetApi(etData);
      }
      ,updateEtFromGigya: function(obj) { //ACTION 3: MASS UPDATE
        log("updateEtFromGigya() called...");
        log(obj);
        var profile     = obj.profile;
        var profileData = obj.data;

        etData = {};
        etData.action  = '3';
        etData.g_id    = guid;
        etData.g_email = profile.email;
        etData.n_arr   = convertGigyaFieldsToEt(profile,profileData);
        etData.u_arr   = {
          "Email__Address": profile.email
          ,"First__Name": profile.firstName
          ,"Last__Name": profile.lastName
          ,"birthYear": profile.birthYear
          ,"Zip__Code": profile.zip
          ,"GigyaVerified": "True"
          ,"GigyaAccounts": ""
          ,"GigyaUID": guid
        };
        
        log("mass update info:");
        log(etData);

        exactTargetApi(etData);
      }
      ,globalUnsubscribe: function() { //ACTION 4: GLOBAL UNSUBSCRIBE
        log("globalUnsubscribe() called...");

        var globalConfirm = confirm('Are you sure you want to stop receiving all Sun-Times Media newsletters and promotional emails?');
        if( !globalConfirm ){ 
          return false; 
        }else{
          var et_id  = getParameterByName("et_id");

          etData = {};
          etData.action  = '4';
          etData.g_id    = guid;
          etData.et_id   = et_id;
          etData.g_email = email;

          log("global unsubscribe info:");
          log(etData);

          fireAggregoEvent('loadSuccess','global');
          exactTargetApi(etData);

          return false;
        }
      }
      ,globalResubscribe: function() { //ACTION 5: GLOBAL RESUBSCRIBE
        log("globalResubscribe() called...");

        etData = {};
        etData.action  = '5';
        etData.g_id    = guid;
        etData.g_email = email;

        log("global resubscribe info:");
        log(etData);

        fireAggregoEvent('loadSuccess','global');
        exactTargetApi(etData);

        return false;
      }
      ,updateGigyaNewsletters: function(json) {
        updateNewsletters(json);
      }
    }
  })();

  return {
    defaultOptions: defaultOptions
    // PUBLIC:
    ,showRegistrationWall: function(screenSet, startScreen, containerId) {
      options.onLoginRefresh = true;
      var context = getContext();
          context.event = "registration";

      //TODO: refactor duplicate code
      gigya.accounts.showScreenSet({
        screenSet:screenSet
        ,mobileScreenSet:screenSet
        ,startScreen:startScreen
        ,containerID:containerId
        ,onError:function(e) {
          jQuery(function($) {
            fireAggregoEvent('showScreenSet.onError', e);
          });
        }
        ,onBeforeScreenLoad:function(e) {
          fireAggregoEvent('showScreenSet.onBeforeScreenLoad', e);
          jQuery(function($) {
            onBeforeScreenLoadHandler(e);
          });
        }
        ,onAfterScreenLoad:function(e) {
          fireAggregoEvent('showScreenSet.onAfterScreenLoad', e);
          onAfterScreenLoadHandler(e);
        }
        ,onFieldChanged:function(e) {
          fireAggregoEvent('showScreenSet.onFieldChanged', e);
          onFieldChangedHandler(e);
        }
        ,onBeforeSubmit:function(e) {
          fireAggregoEvent('showScreenSet.onBeforeSubmit', e);
          onBeforeScreenLoadHandler(e);
        }
        ,onAfterSubmit:function(e) {
          //log(e);
          fireAggregoEvent('showScreenSet.onAfterSubmit', e);
          jQuery(function($) {
            onAfterSubmitHandler(e);
            //SET COOKIE HERE FOR POST EMAIL ACTIVATION
            setGigyaRedirectCookie();
          });
        }
      });
    }
    // PUBLIC (link in screenset is currently calling this method directly)
    ,showNewsletters: function() {
      log("showNewsletters("+pubName+") called...");
      var group = newsletters.getGroup(pubName);
      var startScreen = 'newsletters-' + group;

      var context = getContext();
      context.event = "newsletters";

      showScreenSet('Profile-web', 'Profile-web', startScreen, context, {}, {
        onBeforeScreenLoad: function(e) {
          newsletters.updateGigyaFromEt(e);
        }
        ,onAfterSubmit: function(e) {
          newsletters.updateEtFromGigya(e);
        }
      });
    }
    // PUBLIC used in DTI RegisterPage.csp and MyprofilePage.csp
    ,singleUnsubscribe: function(et_id,n_id,g_id) { //ACTION 1 *
      newsletters.singleUnsubscribe(et_id,n_id,g_id);
    }
    // PUBLIC used in DTI RegisterPage.csp and MyprofilePage.csp
    ,updateGigyaFromEt: function(eventWithProfileAndData) { //ACTION 2 *
      newsletters.updateGigyaFromEt(eventWithProfileAndData);
    }
    // PUBLIC used in DTI RegisterPage.csp and MyprofilePage.csp
    ,updateEtFromGigya: function(eventWithProfileAndData) { //ACTION 3 *
      newsletters.updateEtFromGigya(eventWithProfileAndData);
    }
    // PUBLIC used in DTI RegisterPage.csp and MyprofilePage.csp
    ,globalUnsubscribe: function() { //ACTION 4 *
      return newsletters.globalUnsubscribe();
    }
    // PUBLIC used in DTI RegisterPage.csp and MyprofilePage.csp
    ,globalResubscribe: function() { //ACTION 5 *
      return newsletters.globalResubscribe();
    }

    //PUBLIC
    ,logout: function() {
      logout();
    },
    showShareBarUI: function(containerId, params) {
      showShareBarUI(containerId, params);
    }
    //DEPRECATED (only here for DTI)
    ,getShareBarUIParams: function(streamId, customParams) {
      return getShareBarParams($('#sharebarDiv'), streamId, customParams);
    }
    //DEPRECATED (only here for DTI, and contains duplicate code)
    ,getFeedParams: function() {
      var context = getContext();
      var params = {
        containerID: 'gigyaFeed'
        ,width:300
        ,height:300
        ,siteName: pubFullName
        ,tabOrder: 'everyone,friends,me'
        ,initialTab: 'everyone'
        ,feedID: context.cid
        ,enabledProviders: options.enabledProviders //'facebook,twitter,linkedin,google,yahoo,messenger'
        ,loginUI: 'default' //'custom'
        ,context: context
        ,cid: context.cid
      };
 
      return params;
    }
    //DEPRECATED (only here for DTI, and contains duplicate code)
    ,showFeedUI: function(newparams) {
      var params = this.getFeedParams();
      if( undefined != newparams && null != newparams ) {
        params = newparams;
      }
      gigya.socialize.showFeedUI(params);
    }
    //DEPRECATED (only here for DTI, and contains duplicate code)
    ,getCommentsParams: function(csspath) {
      var href = (csspath && '' != csspath) ? csspath : '/csp/cms/sites/STM/assets/css/gigya.css';
      var context = getContext();
      var params = {
        categoryID: pubName
        ,streamID: ''
        ,containerID: 'commentsDiv'
        ,enabledShareProviders: options.enabledProviders
        ,enabledProviders: options.enabledProviders
        ,cid:context.cid
        ,scope: 'both'
        ,privacy: 'public'
        ,feedID: context.cid
        ,width: 572
        ,useSiteLogin: true
        ,onSiteLoginClicked: function(r) {
          showLogin();
        }
        ,onLoad: function(e) {
          if( document.createStyleSheet ) { //for IE
            document.createStyleSheet(href);
          } else {
            $('head').append( $('<link href="'+href+'" media="screen" rel="stylesheet" type="text/css" />') );
          }
        }
        ,onCommentSubmitted: function(e) {
          fireAggregoEvent('showCommentsUI.onCommentSubmitted', e);
        }
      }
 
      return params;
    }
    //DEPRECATED (only here for DTI, and contains duplicate code)
    ,showCommentsUI: function(newparams) {
      var params = this.getCommentsParams();
      if( undefined != newparams && null != newparams ) {
        params = newparams;
      }
      gigya.socialize.showCommentsUI(params);
    }
  };
};




