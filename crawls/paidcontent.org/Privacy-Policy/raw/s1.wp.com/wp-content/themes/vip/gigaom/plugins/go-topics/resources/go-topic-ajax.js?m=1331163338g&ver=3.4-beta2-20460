jQuery(document).ready(function($){tm=$('#topics-menu');tm.ready(function(){if((!$.browser.msie||$.browser.version.substr(0,1)!='6')&&typeof CFCT_AJAX_LOAD!='undefined'&&CFCT_AJAX_LOAD){ajaxTopics();}});function ajaxTopics(){$('#topics-menu a').click(function(event){if(!$(this).attr("rev"))
return;event.preventDefault();var topic_term=$(this).attr('rev').replace('topic-term-','');var loop=$('#default-loop');var target=$('#topics-loop');if($(this).parent().parent().hasClass('first')){$('#topics-menu li').removeClass('active');$(this).parent().parent().addClass('active');target.hide();loop.show();}
else{$('#topics-menu li').removeClass('active');$(this).parent().parent().addClass('active');loop.hide();var action='topic_loop';if($(this).hasClass('ooyala-tab-link')){action='ooyala_loop';}
var channel=$('body').attr('id').replace('go-channel-','');target.html(cfct.loading()).show();$.ajax({url:$(this).attr('href')+$(this).attr('data-url'),statusCode:{404:function(){target.html('We\'re very sorry, but that content could not be loaded. Please try again later');}},success:function(response){target.html(window[varname]).find('.post').each(function(i,el){$.goRefreshSocialShares();});if($.browser.msie&&$.browser.version.substr(0,1)=='7'){$(this).hide().show();}
else{$(this).hide().slideDown(100);}
$('#topics-loop .expand-excerpt-span').click(function(event){event.preventDefault();$(this).toggleClass("open");var post_id=$(this).attr('id').replace('expand-','');$('#hidden-excerpt-'+post_id).toggle('fast');});$('#topics-loop a.showVideo').videoLightbox();}});}
return false;});}});