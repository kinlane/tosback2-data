var blazeuser = null;
jQuery.fn.popIn = function (options) {
	  var hasScrolled = false;
	  jQuery(document).scroll(function() {
	    hasScrolled = true;
	  });
	  setInterval(function() {
		  if(hasScrolled === true) {
			  showHideFlyout();
			  hasScrolled = false;
		  }
	  }, 250);

	  options = jQuery.extend({speed: 200, scroll: 1300}, options);
	  var element = this;
	  var nextStoryStatus = 'hidden';

	  element.css('right', -element.outerWidth()).css('display', 'block');

	  function fly(direction, newStatus) {
	    element.animate({right: direction + '=' + element.outerWidth()}, options.speed, function () {
	      if(typeof(_gaq) === "object") {
	    	  element_link = element.find('ul a.title').attr('href');
	    	  if(newStatus === "hidden") _gaq.push(['_trackEvent', 'NextStoryFlyout', 'close', element_link]);
	    	  else if(newStatus === "shown") _gaq.push(['_trackEvent', 'NextStoryFlyout', 'open', element_link]);
	      }
	      nextStoryStatus = newStatus;
	    });
	  }

	  element.find('.close').click(function (event) {
	    event.preventDefault();
	    element.hide();
	  });

	  function showHideFlyout() {
	      if (nextStoryStatus !== 'locked') {
	        if (jQuery(this).scrollTop() > options.scroll) {
	          if (nextStoryStatus === 'hidden') {
	            nextStoryStatus = 'locked';
	            fly('+', 'shown');
	          }
	        } else {
	          if (nextStoryStatus === 'shown') {
	            nextStoryStatus = 'locked';
	            fly('-', 'hidden');
	          }
	        }
	      }
	  };
	};

/**
 * TheBlaze Refresher function
 * Author: Edwin J. Mejia A.
 * usage:
 * 	var threshold = 2;// mins(default) if user does not scroll every threshold mins or less the page will refresh at 
 *  var reload_after 10;// mins(default) at which time the page will reload .
 *  $.blazereFresher({'threadhtime':threshold,'reloadtime':reload_after});
 *  jQuery.blazereFresher({'threadhtime':.1,'reloadtime':.7});
 */
(function( $ ){
	var blazerefresher = function( options ) {
		var sttns = { 
				loadtime : 0 
				, lastscrll : 0
				, reloadtime : 10
				, threadhtime : 2
				, getTime : function(){ return new Date().getTime();}
		};
		sttns = $.extend( sttns , options);
		sttns = $.extend( sttns , {lastscrll:sttns.getTime(), loadtime:sttns.getTime(),  reloadtime: (sttns.reloadtime  * 60 * 1000), threadhtime: (sttns.threadhtime  * 60 * 1000)  });
		$(window).bind('scroll',function () {
			if ( sttns.getTime() - sttns.lastscrll > 300) { // more than 200 ms elapsed
				sttns.lastscrll = sttns.getTime();
			}
		});
		var timeoutObj=null,attempts=0;
		var refreshPage = function() {
			if (((sttns.getTime() - sttns.lastscrll)  >= sttns.threadhtime ) && ( (sttns.getTime() - sttns.loadtime) > sttns.reloadtime) ) {
				clearTimeout(timeoutObj);
				window.location.reload();
			} else if (attempts<50) {
				attempts++;
				if(typeof window.console != 'undefined' ){console.log("[attempting reload ]: "+ attempts);}
				clearTimeout(timeoutObj);
				timeoutObj = setTimeout(function(){ refreshPage(); },sttns.threadhtime);
			} else {
				clearTimeout(timeoutObj);
				if(typeof window.console != 'undefined' ){console.log("[warning]: Maximum of attempts exceeded"); window.location.reload(); } 
			} 
		};
		try{
			
		refreshPage();
		}catch(e){/**/}
	};
	jQuery.extend({ blazereFresher:blazerefresher });
})( jQuery );

jQuery(document).ready(function($) {

