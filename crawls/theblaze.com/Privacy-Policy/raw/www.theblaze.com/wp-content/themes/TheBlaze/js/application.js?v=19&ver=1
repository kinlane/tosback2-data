		if(typeof(ACPuzzle) === 'undefined') {
			if(num == 0) loadCaptchaLibrary();
			setTimeout((function(){loadCaptcha(num+1,id)}), 500);
			console.log('waiting');
		} else {
			loadCaptchaText(id);
			console.log('Library is good!');
		}
