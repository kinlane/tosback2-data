(function($){$.fn.easyTooltip=function(options){var defaults={xOffset:10,yOffset:25,tooltipId:"easyTooltip",clickRemove:false,content:"",useElement:""};var options=$.extend(defaults,options);var content;this.each(function(){var title=$(this).attr("title");$(this).hover(function(e){content=(options.content!="")?options.content:title;content=(options.useElement!="")?$("#"+options.useElement).html():content;$(this).attr("title","");if(content!=""&&content!=undefined){$("body").append("<div id='"+options.tooltipId+"'>"+content+"</div>");$("#"+options.tooltipId).css("position","absolute").css("top",(e.pageY-options.yOffset)+"px").css("left",(e.pageX+options.xOffset)+"px").css("display","none").fadeIn("fast")}},function(){$("#"+options.tooltipId).remove();$(this).attr("title",title);});$(this).mousemove(function(e){$("#"+options.tooltipId).css("top",(e.pageY-options.yOffset)+"px").css("left",(e.pageX+options.xOffset)+"px")});if(options.clickRemove){$(this).mousedown(function(e){$("#"+options.tooltipId).remove();$(this).attr("title",title);});}});};})(jQuery);

/*Plugin by: Ara Abcarians: http://ara-abcarians.com License: http://creativecommons.org/licenses/by/3.0/ */
(function (b) { b.fn.aToolTip = function (i) { var a = b.extend({}, { closeTipBtn: "aToolTipCloseBtn", toolTipId: "aToolTip", fixed: !1, loadOnClick: !1, inSpeed: 200, outSpeed: 100, tipContent: "", useElement: null, toolTipClass: "aToolTipTheme", xOffset: 5, yOffset: 5, onShow: null, onHide: null }, i); return this.each(function () { var d = b(this), f = null, h = i.useElement ? b("#" + i.useElement).html() : d.attr("title") ? d.attr("title") : a.tipContent, j = function () { b("body").append("<div id='" + a.toolTipId + "' class='" + a.toolTipClass + "'><p class='aToolTipContent'>" + h + "</p></div>"); h && a.loadOnClick && b("#" + a.toolTipId).append("<input type='button' style='border:0px;' class='" + a.closeTipBtn + "' />") }, k = function (c) { c = c.pageY - b("#" + a.toolTipId).outerHeight() - a.yOffset; c < b(window).scrollTop() && (c = b(window).scrollTop() + a.yOffset); b("#" + a.toolTipId).css({ top: c + "px", left: d.offset().left + d.outerWidth() + a.xOffset + "px" }).stop().fadeIn(a.inSpeed, function () { if (b.isFunction(a.onShow)) a.onShow(d) }) }, g = function (c) { b("#" + a.toolTipId).stop().fadeOut(a.outSpeed, function () { b(this).remove(); if (b.isFunction(a.onHide)) a.onHide(d); f = null }); b("body").unbind("click").click(function () { g(c) }); c.stopPropagation(); return !1 }; h && !a.loadOnClick && d.hover(function (c) { b("#" + a.toolTipId).remove(); d.attr({ title: "" }); j(); k(c) }, function () { g() }); h && a.loadOnClick && d.click(function (c) { b("#" + a.toolTipId).remove(); if (!f || f.target !== c.target) d.attr({ title: "" }), j(), k(c), b("." + a.closeTipBtn).click(function (a) { return g(a) }), b("body").click(function (a) { return g(a) }), b("#" + a.toolTipId).click(function (a) { a.stopPropagation(); return !1 }), f = c; else return f = null, g(e); return !1 }); !a.fixed && !a.loadOnClick && d.mousemove(function (c) { b("#" + a.toolTipId).css({ top: c.pageY - b("#" + a.toolTipId).outerHeight() - a.yOffset, left: c.pageX + a.xOffset }) }) }) } })(jQuery);
