(function(c){c.fn.easyTooltip=function(b){var b=c.extend({xOffset:10,yOffset:25,tooltipId:"easyTooltip",clickRemove:!1,content:"",useElement:""},b),a;this.each(function(){var d=c(this).attr("title");c(this).hover(function(f){a=""!=b.content?b.content:d;a=""!=b.useElement?c("#"+b.useElement).html():a;""!=a&&void 0!=a&&(c("body").append("<div id='"+b.tooltipId+"'>"+a+"</div>"),c("#"+b.tooltipId).css("position","absolute").css("top",f.pageY-b.yOffset+"px").css("left",f.pageX+b.xOffset+"px").css("display",
"none").fadeIn("fast"))},function(){c("#"+b.tooltipId).remove();c(this).attr("title",d)});c(this).mousemove(function(a){c("#"+b.tooltipId).css("top",a.pageY-b.yOffset+"px").css("left",a.pageX+b.xOffset+"px")});b.clickRemove&&c(this).mousedown(function(){c("#"+b.tooltipId).remove();c(this).attr("title",d)})})}})(jQuery);
(function(c){c.fn.aToolTip=function(b){var a=c.extend({},{closeTipBtn:"aToolTipCloseBtn",toolTipId:"aToolTip",fixed:!1,loadOnClick:!1,inSpeed:200,outSpeed:100,tipContent:"",useElement:null,toolTipClass:"aToolTipTheme",xOffset:5,yOffset:5,onShow:null,onHide:null},b);return this.each(function(){var d=c(this),f=null,h=b.useElement?c("#"+b.useElement).html():d.attr("title")?d.attr("title"):a.tipContent,i=function(){c("body").append("<div id='"+a.toolTipId+"' class='"+a.toolTipClass+"'><p class='aToolTipContent'>"+
h+"</p></div>");h&&a.loadOnClick&&c("#"+a.toolTipId).append("<input type='button' style='border:0px;' class='"+a.closeTipBtn+"' />")},j=function(b){b=b.pageY-c("#"+a.toolTipId).outerHeight()-a.yOffset;b<c(window).scrollTop()&&(b=c(window).scrollTop()+a.yOffset);c("#"+a.toolTipId).css({top:b+"px",left:d.offset().left+d.outerWidth()+a.xOffset+"px"}).stop().fadeIn(a.inSpeed,function(){if(c.isFunction(a.onShow))a.onShow(d)})},g=function(b){c("#"+a.toolTipId).stop().fadeOut(a.outSpeed,function(){c(this).remove();
if(c.isFunction(a.onHide))a.onHide(d);f=null});c("body").unbind("click").click(function(){g(b)});b.stopPropagation();return!1};h&&!a.loadOnClick&&d.hover(function(b){c("#"+a.toolTipId).remove();i();j(b)},function(){g()});h&&a.loadOnClick&&d.click(function(b){c("#"+a.toolTipId).remove();if(!f||f.target!==b.target)i(),j(b),c("."+a.closeTipBtn).click(function(a){return g(a)}),c("body").click(function(a){return g(a)}),c("#"+a.toolTipId).click(function(a){a.stopPropagation();return!1}),f=b;else return f=
null,g(e);return!1});!a.fixed&&!a.loadOnClick&&d.mousemove(function(b){c("#"+a.toolTipId).css({top:b.pageY-c("#"+a.toolTipId).outerHeight()-a.yOffset,left:b.pageX+a.xOffset})})})}})(jQuery);