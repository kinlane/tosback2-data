/* A fix for the iOS orientationchange zoom bug. Script by @scottjehl, rebound by @wilto.MIT / GPLv2 License.*/
(function(p){function B(){s.setAttribute("content",v),w=!0}function C(){s.setAttribute("content",u),w=!1}function D(a){A=a.accelerationIncludingGravity,x=Math.abs(A.x),y=Math.abs(A.y),z=Math.abs(A.z),(!p.orientation||p.orientation===180)&&(x>7||(z>6&&y<8||z<8&&y>6)&&x>5)?w&&C():w||B()}var q=navigator.userAgent;if(!(/iPhone|iPad|iPod/.test(navigator.platform)&&/OS [1-5]_[0-9_]* like Mac OS X/i.test(q)&&q.indexOf("AppleWebKit")>-1)){return}var r=p.document;if(!r.querySelector){return}var s=r.querySelector("meta[name=viewport]"),t=s&&s.getAttribute("content"),u=t+",maximum-scale=1",v=t+",maximum-scale=10",w=!0,x,y,z,A;if(!s){return}p.addEventListener("orientationchange",B,!1),p.addEventListener("devicemotion",D,!1)})(this);
