(function(v){v.fn.calcSubWidth=function(){cswew=0;v(this).find("ul").each(function(){var a=v(this).outerWidth(true);if((v.browser.mozilla&&(navigator.platform.substr(0,3)==="Mac"))||(v.browser.msie&&parseInt(v.browser.version)===9)){a+=3}if(v.browser.mozilla&&parseInt(v.browser.version)>=4){a+=1}cswew+=a;if(v.browser.msie&&parseInt(v.browser.version)===6){v(this).css("width",v(this).width())}})};function n(c){var a=c.find(".sub"),e=c.outerWidth(true);if(a){var g=a.find(".row"),d=a.outerWidth(true),b=Math.floor(Math.abs(a.position().left)*1.5);if(g.length===0){a.calcSubWidth();if(d>=e){e=cswew}else{e=e-d+cswew+b;if((v.browser.mozilla&&(navigator.platform.substr(0,3)==="Mac"))||(v.browser.msie&&parseInt(v.browser.version)===9)){e-=b}}}else{var f=0;g.each(function(){v(this).calcSubWidth();f=(cswew>f)?cswew:f;if(v.browser.msie&&parseInt(v.browser.version)===7){var h=v(this).find("li.ul");if(h.length!==0){h.each(function(){v(this).css("width",v(this).parent().width())})}}});e=f}a.css("width",e);a.addClass("calc");return e}}function u(){var d=v(this),a=d.find(".sub"),e=v("#hdrnav").find("li.toplvl.active");e.addClass("sel");d.addClass("over");if(a&&a.length!==0){a.show();if(!(a).hasClass("calc")){var b=n(d);if(a.attr("id")==="ldtab"){var c=-1*(a.outerWidth()-2-(920-a.parent().first().position().left));if((v.browser.mozilla&&parseInt(v.browser.version)>=3)||(v.browser.msie&&parseInt(v.browser.version)===9)){c+=1}a.css("left",c)}}}}function m(){var a=v(this),c=a.find(".sub"),b=v("#hdrnav").find("li.toplvl.active");if(c){c.hide()}a.removeClass("over");b.removeClass("sel")}function l(a){if(a.target===this||a.target.parentElement===this){window.location.href=v(this).find("h2 a").attr("href")}}function o(){t();r();q();var d=v(this),a=d.find(".sub"),e=v("#hdrnav").find("li.toplvl.active");e.addClass("sel");d.addClass("over");if(a&&a.length!==0){a.show();if(!(a).hasClass("calc")){var b=n(d);if(a.attr("id")==="ldtab"){var c=-1*(a.outerWidth()-2-(920-a.parent().first().position().left));a.css("left",c)}}}}function r(){v("#hdrnav li.over .hdrtoplbl").unbind("touchstart");p();var a=v("#hdrnav li.over"),c=a.find(".sub"),b=v("#hdrnav").find("li.toplvl.active");if(c){c.hide()}a.removeClass("over");b.removeClass("sel")}function s(){r();q();v(this).children("ul").show()}function q(){v("#currentEdition li").has("ul").children("ul").hide()}function p(){var a=v("#hdrnav .hdrtoplbl h2 a");a.each(function(){var b=v(this),c=b.attr("href");if(b.data("href")===undefined){b.data("href",c)}b.attr("href","javascript:void(0);")})}function t(){setTimeout(function(){var b=v("#hdrnav li.over .hdrtoplbl h2 a"),a=b.data("href");if(a!==undefined){b.attr("href",a);if(v("#hdrnav li.over").find(".sub").length===0){window.location.href=a}else{v("#hdrnav li.over .hdrtoplbl").bind("touchstart",function(){window.location.href=a})}}},0)}v(document).ready(function(){if("ontouchstart" in document.documentElement){p();v("html").bind("touchstart",r);v("html").bind("touchstart",q);v("#hdrnav").bind("touchstart",function(b){b.stopPropagation()});var a=v("#currentEdition li").has("ul");a.bind("touchstart",function(b){b.stopPropagation()});a.bind("click",s);v("#hdrnav li.toplvl").bind("click",o)}else{v("#currentEdition").children("li").hover(function(){v(this).children("ul").show()},function(){v(this).children("ul").hide()});v("#hdrnav li.toplvl").hover(u,m);v("#hdrnav").delegate(".hdrtoplbl","click",l)}})})(jQuery);function setHideCookieMessageCookie(){$.cookie("cookiemsg","1",{expires:90,path:"/",domain:".travelzoo.com",secure:false})}function cookieMessageCloseButtonClick(){setHideCookieMessageCookie();$("#divCookieMessage").fadeOut("fast");return false};