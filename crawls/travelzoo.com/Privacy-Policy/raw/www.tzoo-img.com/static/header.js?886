(function(t){t.fn.calcSubWidth=function(){cswew=0;t(this).find("ul").each(function(){var a=t(this).outerWidth(true);if((t.browser.mozilla&&(navigator.platform.substr(0,3)==="Mac"))||(t.browser.msie&&parseInt(t.browser.version)===9)){a+=3}if(t.browser.mozilla&&parseInt(t.browser.version)>=4){a+=1}cswew+=a;if(t.browser.msie&&parseInt(t.browser.version)===6){t(this).css("width",t(this).width())}})};function v(f){var g=f.find(".sub"),c=f.outerWidth(true);if(g){var e=g.find(".row"),b=g.outerWidth(true),a=Math.floor(Math.abs(g.position().left)*1.5);if(e.length===0){g.calcSubWidth();if(b>=c){c=cswew}else{c=c-b+cswew+a;if((t.browser.mozilla&&(navigator.platform.substr(0,3)==="Mac"))||(t.browser.msie&&parseInt(t.browser.version)===9)){c-=a}}}else{var d=0;e.each(function(){t(this).calcSubWidth();d=(cswew>d)?cswew:d;if(t.browser.msie&&parseInt(t.browser.version)===7){var h=t(this).find("li.ul");if(h.length!==0){h.each(function(){t(this).css("width",t(this).parent().width())})}}});c=d}g.css("width",c);g.addClass("calc");return c}}function r(){var d=t(this),a=d.find(".sub"),e=t("#hdrnav").find("li.toplvl.active");e.addClass("sel");d.addClass("over");if(a&&a.length!==0){a.show();if(!(a).hasClass("calc")){var b=v(d);if(a.attr("id")==="ldtab"){var c=-1*(a.outerWidth()-2-(920-a.parent().first().position().left));if((t.browser.mozilla&&parseInt(t.browser.version)>=3)||(t.browser.msie&&parseInt(t.browser.version)===9)){c+=1}a.css("left",c)}}}}function u(){var a=t(this),c=a.find(".sub"),b=t("#hdrnav").find("li.toplvl.active");if(c){c.hide()}a.removeClass("over");b.removeClass("sel")}function l(a){if(a.target===this||a.target.parentElement===this){window.location.href=t(this).find("h2 a").attr("href")}}function m(){p();o();q();var d=t(this),a=d.find(".sub"),e=t("#hdrnav").find("li.toplvl.active");e.addClass("sel");d.addClass("over");if(a&&a.length!==0){a.show();if(!(a).hasClass("calc")){var b=v(d);if(a.attr("id")==="ldtab"){var c=-1*(a.outerWidth()-2-(920-a.parent().first().position().left));a.css("left",c)}}}}function o(){t("#hdrnav li.over .hdrtoplbl").unbind("touchstart");n();var a=t("#hdrnav li.over"),c=a.find(".sub"),b=t("#hdrnav").find("li.toplvl.active");if(c){c.hide()}a.removeClass("over");b.removeClass("sel")}function s(){o();q();t(this).children("ul").show()}function q(){t("#currentEdition li").has("ul").children("ul").hide()}function n(){var a=t("#hdrnav .hdrtoplbl h2 a");a.each(function(){var b=t(this),c=b.attr("href");if(b.data("href")===undefined){b.data("href",c)}b.attr("href","javascript:void(0);")})}function p(){setTimeout(function(){var b=t("#hdrnav li.over .hdrtoplbl h2 a"),a=b.data("href");if(a!==undefined){b.attr("href",a);if(t("#hdrnav li.over").find(".sub").length===0){window.location.href=a}else{t("#hdrnav li.over .hdrtoplbl").bind("touchstart",function(){window.location.href=a})}}},0)}t(document).ready(function(){if("ontouchstart" in document.documentElement){n();t("html").bind("touchstart",o);t("html").bind("touchstart",q);t("#hdrnav").bind("touchstart",function(b){b.stopPropagation()});var a=t("#currentEdition li").has("ul");a.bind("touchstart",function(b){b.stopPropagation()});a.bind("click",s);t("#hdrnav li.toplvl").bind("click",m)}else{t("#currentEdition").children("li").hover(function(){t(this).children("ul").show()},function(){t(this).children("ul").hide()});t("#hdrnav li.toplvl").hover(r,u);t("#hdrnav").delegate(".hdrtoplbl","click",l)}})})(jQuery);function setHideCookieMessageCookie(){$.cookie("cookiemsg","1",{expires:90,path:"/",domain:".travelzoo.com",secure:false})}function cookieMessageCloseButtonClick(){setHideCookieMessageCookie();$("#divCookieMessage").fadeOut("fast");return false};