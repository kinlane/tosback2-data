(function(p){p.fn.calcSubWidth=function(){cswew=0;p(this).find("ul").each(function(){var a=p(this).outerWidth(true);if((p.browser.mozilla&&(navigator.platform.substr(0,3)==="Mac"))||(p.browser.msie&&parseInt(p.browser.version)===9)){a+=3}if(p.browser.mozilla&&parseInt(p.browser.version)>=4){a+=1}cswew+=a;if(p.browser.msie&&parseInt(p.browser.version)===6){p(this).css("width",p(this).width())}})};function t(c){var a=c.find(".sub"),e=c.outerWidth(true);if(a){var g=a.find(".row"),d=a.outerWidth(true),b=Math.floor(Math.abs(a.position().left)*1.5);if(g.length===0){a.calcSubWidth();if(d>=e){e=cswew}else{e=e-d+cswew+b;if((p.browser.mozilla&&(navigator.platform.substr(0,3)==="Mac"))||(p.browser.msie&&parseInt(p.browser.version)===9)){e-=b}}}else{var f=0;g.each(function(){p(this).calcSubWidth();f=(cswew>f)?cswew:f;if(p.browser.msie&&parseInt(p.browser.version)===7){var h=p(this).find("li.ul");if(h.length!==0){h.each(function(){p(this).css("width",p(this).parent().width())})}}});e=f}a.css("width",e);a.addClass("calc");return e}}function o(){var a=p(this),e=a.find(".sub"),d=p("#hdrnav").find("li.toplvl.active");d.addClass("sel");a.addClass("over");if(e&&e.length!==0){e.show();if(!(e).hasClass("calc")){var b=t(a);if(e.attr("id")==="ldtab"){var c=-1*(e.outerWidth()-2-(920-e.parent().first().position().left));if((p.browser.mozilla&&parseInt(p.browser.version)>=3)||(p.browser.msie&&parseInt(p.browser.version)===9)){c+=1}e.css("left",c)}}}}function r(){var c=p(this),b=c.find(".sub"),a=p("#hdrnav").find("li.toplvl.active");if(b){b.hide()}c.removeClass("over");a.removeClass("sel")}function l(a){if(a.target===this||a.target.parentElement===this){window.location.href=p(this).find("h2 a").attr("href")}}function u(){n();m();q();var a=p(this),e=a.find(".sub"),d=p("#hdrnav").find("li.toplvl.active");d.addClass("sel");a.addClass("over");if(e&&e.length!==0){e.show();if(!(e).hasClass("calc")){var b=t(a);if(e.attr("id")==="ldtab"){var c=-1*(e.outerWidth()-2-(920-e.parent().first().position().left));e.css("left",c)}}}}function m(){p("#hdrnav li.over .hdrtoplbl").unbind("touchstart");v();var c=p("#hdrnav li.over"),b=c.find(".sub"),a=p("#hdrnav").find("li.toplvl.active");if(b){b.hide()}c.removeClass("over");a.removeClass("sel")}function s(){m();q();p(this).children("ul").show()}function q(){p("#currentEdition li").has("ul").children("ul").hide()}function v(){var a=p("#hdrnav .hdrtoplbl h2 a");a.each(function(){var b=p(this),c=b.attr("href");if(b.data("href")===undefined){b.data("href",c)}b.attr("href","javascript:void(0);")})}function n(){setTimeout(function(){var b=p("#hdrnav li.over .hdrtoplbl h2 a"),a=b.data("href");if(a!==undefined){b.attr("href",a);if(p("#hdrnav li.over").find(".sub").length===0){window.location.href=a}else{p("#hdrnav li.over .hdrtoplbl").bind("touchstart",function(){window.location.href=a})}}},0)}p(document).ready(function(){if("ontouchstart" in document.documentElement){v();p("html").bind("touchstart",m);p("html").bind("touchstart",q);p("#hdrnav").bind("touchstart",function(b){b.stopPropagation()});var a=p("#currentEdition li").has("ul");a.bind("touchstart",function(b){b.stopPropagation()});a.bind("click",s);p("#hdrnav li.toplvl").bind("click",u)}else{p("#currentEdition").children("li").hover(function(){p(this).children("ul").show()},function(){p(this).children("ul").hide()});p("#hdrnav li.toplvl").hover(o,r);p("#hdrnav").delegate(".hdrtoplbl","click",l)}})})(jQuery);function setHideCookieMessageCookie(){$.cookie("cookiemsg","1",{expires:90,path:"/",domain:".travelzoo.com",secure:false})}function cookieMessageCloseButtonClick(){setHideCookieMessageCookie();$("#divCookieMessage").fadeOut("fast");return false};