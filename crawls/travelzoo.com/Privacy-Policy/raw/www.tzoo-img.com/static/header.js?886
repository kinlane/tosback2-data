(function(a){a.fn.calcSubWidth=function(){cswew=0;a(this).find("ul").each(function(){var l=a(this).outerWidth(true);if((a.browser.mozilla&&(navigator.platform.substr(0,3)==="Mac"))||(a.browser.msie&&parseInt(a.browser.version)===9)){l+=3}if(a.browser.mozilla&&parseInt(a.browser.version)>=4){l+=1}cswew+=l;if(a.browser.msie&&parseInt(a.browser.version)===6){a(this).css("width",a(this).width())}})};function g(r){var l=r.find(".sub"),p=r.outerWidth(true);if(l){var n=l.find(".row"),o=l.outerWidth(true),q=Math.floor(Math.abs(l.position().left)*1.5);if(n.length===0){l.calcSubWidth();if(o>=p){p=cswew}else{p=p-o+cswew+q;if((a.browser.mozilla&&(navigator.platform.substr(0,3)==="Mac"))||(a.browser.msie&&parseInt(a.browser.version)===9)){p-=q}}}else{var m=0;n.each(function(){a(this).calcSubWidth();m=(cswew>m)?cswew:m;if(a.browser.msie&&parseInt(a.browser.version)===7){var s=a(this).find("li.ul");if(s.length!==0){s.each(function(){a(this).css("width",a(this).parent().width())})}}});p=m}l.css("width",p);l.addClass("calc");return p}}function c(){var m=a(this),l=m.find(".sub"),o=a("#hdrnav").find("li.toplvl.active");o.addClass("sel");m.addClass("over");if(l&&l.length!==0){l.show();if(!(l).hasClass("calc")){var p=g(m);if(l.attr("id")==="ldtab"){var n=-1*(l.outerWidth()-2-(920-l.parent().first().position().left));if((a.browser.mozilla&&parseInt(a.browser.version)>=3)||(a.browser.msie&&parseInt(a.browser.version)===9)){n+=1}l.css("left",n)}}}}function f(){var l=a(this),n=l.find(".sub"),m=a("#hdrnav").find("li.toplvl.active");if(n){n.hide()}l.removeClass("over");m.removeClass("sel")}function b(l){if(l.target===this||l.target.parentElement===this){window.location.href=a(this).find("h2 a").attr("href")}}function e(){i();h();d();var m=a(this),l=m.find(".sub"),o=a("#hdrnav").find("li.toplvl.active");o.addClass("sel");m.addClass("over");if(l&&l.length!==0){l.show();if(!(l).hasClass("calc")){var p=g(m);if(l.attr("id")==="ldtab"){var n=-1*(l.outerWidth()-2-(920-l.parent().first().position().l