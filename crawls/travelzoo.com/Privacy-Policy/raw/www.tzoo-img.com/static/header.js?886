(function(o){o.fn.calcSubWidth=function(){cswew=0;o(this).find("ul").each(function(){var a=o(this).outerWidth(true);if((o.browser.mozilla&&(navigator.platform.substr(0,3)==="Mac"))||(o.browser.msie&&parseInt(o.browser.version)===9)){a+=3}if(o.browser.mozilla&&parseInt(o.browser.version)>=4){a+=1}cswew+=a;if(o.browser.msie&&parseInt(o.browser.version)===6){o(this).css("width",o(this).width())}})};function r(b){var c=b.find(".sub"),d=b.outerWidth(true);if(c){var f=c.find(".row"),g=c.outerWidth(true),e=Math.floor(Math.abs(c.position().left)*1.5);if(f.length===0){c.calcSubWidth();if(g>=d){d=cswew}else{d=d-g+cswew+e;if((o.browser.mozilla&&(navigator.platform.substr(0,3)==="Mac"))||(o.browser.msie&&parseInt(o.browser.version)===9)){d-=e}}}else{var a=0;f.each(function(){o(this).calcSubWidth();a=(cswew>a)?cswew:a;if(o.browser.msie&&parseInt(o.browser.version)===7){var h=o(this).find("li.ul");if(h.length!==0){h.each(function(){o(this).css("width",o(this).parent().width())})}}});d=a}c.css("width",d);c.addClass("calc");return d}}function n(){var d=o(this),a=d.find(".sub"),e=o("#hdrnav").find("li.toplvl.active");e.addClass("sel");d.addClass("over");if(a&&a.length!==0){a.show();if(!(a).hasClass("calc")){var b=r(d);if(a.attr("id")==="ldtab"){var c=-1*(a.outerWidth()-2-(920-a.parent().first().position().left));if((o.browser.mozilla&&parseInt(o.browser.version)>=3)||(o.browser.msie&&parseInt(o.browser.version)===9)){c+=1}a.css("left",c)}}}}function p(){var a=o(this),c=a.find(".sub"),b=o("#hdrnav").find("li.toplvl.active");if(c){c.hide()}a.removeClass("over");b.removeClass("sel")}function s(a){if(a.target===this||a.target.parentElement===this){window.location.href=o(this).find("h2 a").attr("href")}}function t(){m();v();q();var d=o(this),a=d.find(".sub"),e=o("#hdrnav").find("li.toplvl.active");e.addClass("sel");d.addClass("over");if(a&&a.length!==0){a.show();if(!(a).hasClass("calc")){var b=r(d);if(a.attr("id")==="ldtab"){var c=-1*(a.outerWidth()-2-(920-a.parent().first().position().l