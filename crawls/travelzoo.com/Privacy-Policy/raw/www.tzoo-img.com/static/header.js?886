(function(e){e.fn.calcSubWidth=function(){cswew=0;e(this).find("ul").each(function(){var l=e(this).outerWidth(true);if((e.browser.mozilla&&(navigator.platform.substr(0,3)==="Mac"))||(e.browser.msie&&parseInt(e.browser.version)===9)){l+=3}if(e.browser.mozilla&&parseInt(e.browser.version)>=4){l+=1}cswew+=l;if(e.browser.msie&&parseInt(e.browser.version)===6){e(this).css("width",e(this).width())}})};function h(q){var r=q.find(".sub"),o=q.outerWidth(true);if(r){var m=r.find(".row"),n=r.outerWidth(true),p=Math.floor(Math.abs(r.position().left)*1.5);if(m.length===0){r.calcSubWidth();if(n>=o){o=cswew}else{o=o-n+cswew+p;if((e.browser.mozilla&&(navigator.platform.substr(0,3)==="Mac"))||(e.browser.msie&&parseInt(e.browser.version)===9)){o-=p}}}else{var l=0;m.each(function(){e(this).calcSubWidth();l=(cswew>l)?cswew:l;if(e.browser.msie&&parseInt(e.browser.version)===7){var s=e(this).find("li.ul");if(s.length!==0){s.each(function(){e(this).css("width",e(this).parent().width())})}}});o=l}r.css("width",o);r.addClass("calc");return o}}function g(){var m=e(this),l=m.find(".sub"),o=e("#hdrnav").find("li.toplvl.active");o.addClass("sel");m.addClass("over");if(l&&l.length!==0){l.show();if(!(l).hasClass("calc")){var p=h(m);if(l.attr("id")==="ldtab"){var n=-1*(l.outerWidth()-2-(920-l.parent().first().position().left));if((e.browser.mozilla&&parseInt(e.browser.version)>=3)||(e.browser.msie&&parseInt(e.browser.version)===9)){n+=1}l.css("left",n)}}}}function k(){var l=e(this),n=l.find(".sub"),m=e("#hdrnav").find("li.toplvl.active");if(n){n.hide()}l.removeClass("over");m.removeClass("sel")}function j(l){if(l.target===this||l.target.parentElement===this){window.location.href=e(this).find("h2 a").attr("href")}}function i(){f();a();d();var m=e(this),l=m.find(".sub"),o=e("#hdrnav").find("li.toplvl.active");o.addClass("sel");m.addClass("over");if(l&&l.length!==0){l.show();if(!(l).hasClass("calc")){var p=h(m);if(l.attr("id")==="ldtab"){var n=-1*(l.outerWidth()-2-(920-l.parent().first().position().left));l.css("left",n)}}}}function a(){e("#hdrnav li.over .hdrtoplbl").unbind("touchstart");c();var l=e("#hdrnav li.over"),n=l.find(".sub"),m=e("#hdrnav").find("li.toplvl.active");if(n){n.hide()}l.removeClass("over");m.removeClass("sel")}function b(){a();d();e(this).children("ul").show()}function d(){e("#currentEdition li").has("ul").children("ul").hide()}function c(){var l=e("#hdrnav .hdrtoplbl h2 a");l.each(function(){var n=e(this),m=n.attr("href");if(n.data("href")===undefined){n.data("href",m)}n.attr("href","javascript:void(0);")})}function f(){setTimeout(function(){var m=e("#hdrnav li.over .hdrtoplbl h2 a"),l=m.data("href");if(l!==undefined){m.attr("href",l);if(e("#hdrnav li.over").find(".sub").length===0){window.location.href=l}else{e("#hdrnav li.over .hdrtoplbl").bind("touchstart",function(){window.location.href=l})}}},0)}e(document).ready(function(){if("ontouchstart" in document.documentElement){c();e("html").bind("touchstart",a);e("html").bind("touchstart",d);e("#hdrnav").bind("touchstart",function(m){m.stopPropagation()});var l=e("#currentEdition li").has("ul");l.bind("touchstart",function(m){m.stopPropagation()});l.bind("click",b);e("#hdrnav li.toplvl").bind("click",i)}else{e("#currentEdition").children("li").hover(function(){e(this).children("ul").show()},function(){e(this).children("ul").hide()});e("#hdrnav li.toplvl").hover(g,k);e("#hdrnav").delegate(".hdrtoplbl","click",j)}})})(jQuery);function setHideCookieMessageCookie(){$.cookie("cookiemsg","1",{expires:90,path:"/",domain:".travelzoo.com",secure:false})}function cookieMessageCloseButtonClick(){setHideCookieMessageCookie();$("#divCookieMessage").fadeOut("fast");return false};