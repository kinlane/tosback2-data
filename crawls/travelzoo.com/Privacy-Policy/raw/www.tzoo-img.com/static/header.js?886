(function(u){u.fn.calcSubWidth=function(){cswew=0;u(this).find("ul").each(function(){var a=u(this).outerWidth(true);if((u.browser.mozilla&&(navigator.platform.substr(0,3)==="Mac"))||(u.browser.msie&&parseInt(u.browser.version)===9)){a+=3}if(u.browser.mozilla&&parseInt(u.browser.version)>=4){a+=1}cswew+=a;if(u.browser.msie&&parseInt(u.browser.version)===6){u(this).css("width",u(this).width())}})};function m(f){var g=f.find(".sub"),c=f.outerWidth(true);if(g){var e=g.find(".row"),b=g.outerWidth(true),a=Math.floor(Math.abs(g.position().left)*1.5);if(e.length===0){g.calcSubWidth();if(b>=c){c=cswew}else{c=c-b+cswew+a;if((u.browser.mozilla&&(navigator.platform.substr(0,3)==="Mac"))||(u.browser.msie&&parseInt(u.browser.version)===9)){c-=a}}}else{var d=0;e.each(function(){u(this).calcSubWidth();d=(cswew>d)?cswew:d;if(u.browser.msie&&parseInt(u.browser.version)===7){var h=u(this).find("li.ul");if(h.length!==0){h.each(function(){u(this).css("width",u(this).parent().width())})}}});c=d}g.css("width",c);g.addClass("calc");return c}}function t(){var d=u(this),a=d.find(".sub"),e=u("#hdrnav").find("li.toplvl.active");e.addClass("sel");d.addClass("over");if(a&&a.length!==0){a.show();if(!(a).hasClass("calc")){var b=m(d);if(a.attr("id")==="ldtab"){var c=-1*(a.outerWidth()-2-(920-a.parent().first().position().left));if((u.browser.mozilla&&parseInt(u.browser.version)>=3)||(u.browser.msie&&parseInt(u.browser.version)===9)){c+=1}a.css("left",c)}}}}function v(){var a=u(this),c=a.find(".sub"),b=u("#hdrnav").find("li.toplvl.active");if(c){c.hide()}a.removeClass("over");b.removeClass("sel")}function s(a){if(a.target===this||a.target.parentElement===this){window.location.href=u(this).find("h2 a").attr("href")}}function n(){r();p();q();var d=u(this),a=d.find(".sub"),e=u("#hdrnav").find("li.toplvl.active");e.addClass("sel");d.addClass("over");if(a&&a.length!==0){a.show();if(!(a).hasClass("calc")){var b=m(d);if(a.attr("id")==="ldtab"){var c=-1*(a.outerWidth()-2-(920-a.parent().first().position().l