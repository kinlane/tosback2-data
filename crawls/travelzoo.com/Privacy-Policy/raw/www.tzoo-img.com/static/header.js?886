(function(h){h.fn.calcSubWidth=function(){cswew=0;h(this).find("ul").each(function(){var l=h(this).outerWidth(true);if((h.browser.mozilla&&(navigator.platform.substr(0,3)==="Mac"))||(h.browser.msie&&parseInt(h.browser.version)===9)){l+=3}if(h.browser.mozilla&&parseInt(h.browser.version)>=4){l+=1}cswew+=l;if(h.browser.msie&&parseInt(h.browser.version)===6){h(this).css("width",h(this).width())}})};function c(n){var o=n.find(".sub"),l=n.outerWidth(true);if(o){var q=o.find(".row"),r=o.outerWidth(true),m=Math.floor(Math.abs(o.position().left)*1.5);if(q.length===0){o.calcSubWidth();if(r>=l){l=cswew}else{l=l-r+cswew+m;if((h.browser.mozilla&&(navigator.platform.substr(0,3)==="Mac"))||(h.browser.msie&&parseInt(h.browser.version)===9)){l-=m}}}else{var p=0;q.each(function(){h(this).calcSubWidth();p=(cswew>p)?cswew:p;if(h.browser.msie&&parseInt(h.browser.version)===7){var s=h(this).find("li.ul");if(s.length!==0){s.each(function(){h(this).css("width",h(this).parent().width())})}}});l=p}o.css("width",l);o.addClass("calc");return l}}function k(){var l=h(this),o=l.find(".sub"),m=h("#hdrnav").find("li.toplvl.active");m.addClass("sel");l.addClass("over");if(o&&o.length!==0){o.show();if(!(o).hasClass("calc")){var p=c(l);if(o.attr("id")==="ldtab"){var n=-1*(o.outerWidth()-2-(920-o.parent().first().position().left));if((h.browser.mozilla&&parseInt(h.browser.version)>=3)||(h.browser.msie&&parseInt(h.browser.version)===9)){n+=1}o.css("left",n)}}}}function i(){var n=h(this),m=n.find(".sub"),l=h("#hdrnav").find("li.toplvl.active");if(m){m.hide()}n.removeClass("over");l.removeClass("sel")}function j(l){if(l.target===this||l.target.parentElement===this){window.location.href=h(this).find("h2 a").attr("href")}}function a(){e();g();d();var l=h(this),o=l.find(".sub"),m=h("#hdrnav").find("li.toplvl.active");m.addClass("sel");l.addClass("over");if(o&&o.length!==0){o.show();if(!(o).hasClass("calc")){var p=c(l);if(o.attr("id")==="ldtab"){var n=-1*(o.outerWidth()-2-(920-o.parent().first().position().left));o.css("left",n)}}}}function g(){h("#hdrnav li.over .hdrtoplbl").unbind("touchstart");f();var n=h("#hdrnav li.over"),m=n.find(".sub"),l=h("#hdrnav").find("li.toplvl.active");if(m){m.hide()}n.removeClass("over");l.removeClass("sel")}function b(){g();d();h(this).children("ul").show()}function d(){h("#currentEdition li").has("ul").children("ul").hide()}function f(){var l=h("#hdrnav .hdrtoplbl h2 a");l.each(function(){var n=h(this),m=n.attr("href");if(n.data("href")===undefined){n.data("href",m)}n.attr("href","javascript:void(0);")})}function e(){setTimeout(function(){var m=h("#hdrnav li.over .hdrtoplbl h2 a"),l=m.data("href");if(l!==undefined){m.attr("href",l);if(h("#hdrnav li.over").find(".sub").length===0){window.location.href=l}else{h("#hdrnav li.over .hdrtoplbl").bind("touchstart",function(){window.location.href=l})}}},0)}h(document).ready(function(){if("ontouchstart" in document.documentElement){f();h("html").bind("touchstart",g);h("html").bind("touchstart",d);h("#hdrnav").bind("touchstart",function(m){m.stopPropagation()});var l=h("#currentEdition li").has("ul");l.bind("touchstart",function(m){m.stopPropagation()});l.bind("click",b);h("#hdrnav li.toplvl").bind("click",a)}else{h("#currentEdition").children("li").hover(function(){h(this).children("ul").show()},function(){h(this).children("ul").hide()});h("#hdrnav li.toplvl").hover(k,i);h("#hdrnav").delegate(".hdrtoplbl","click",j)}})})(jQuery);function setHideCookieMessageCookie(){$.cookie("cookiemsg","1",{expires:90,path:"/",domain:".travelzoo.com",secure:false})}function cookieMessageCloseButtonClick(){setHideCookieMessageCookie();$("#divCookieMessage").fadeOut("fast");return false};