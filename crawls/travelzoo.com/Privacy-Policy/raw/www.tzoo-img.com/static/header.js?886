(function(e){e.fn.calcSubWidth=function(){cswew=0;e(this).find("ul").each(function(){var l=e(this).outerWidth(true);if((e.browser.mozilla&&(navigator.platform.substr(0,3)==="Mac"))||(e.browser.msie&&parseInt(e.browser.version)===9)){l+=3}if(e.browser.mozilla&&parseInt(e.browser.version)>=4){l+=1}cswew+=l;if(e.browser.msie&&parseInt(e.browser.version)===6){e(this).css("width",e(this).width())}})};function h(n){var o=n.find(".sub"),l=n.outerWidth(true);if(o){var q=o.find(".row"),r=o.outerWidth(true),m=Math.floor(Math.abs(o.position().left)*1.5);if(q.length===0){o.calcSubWidth();if(r>=l){l=cswew}else{l=l-r+cswew+m;if((e.browser.mozilla&&(navigator.platform.substr(0,3)==="Mac"))||(e.browser.msie&&parseInt(e.browser.version)===9)){l-=m}}}else{var p=0;q.each(function(){e(this).calcSubWidth();p=(cswew>p)?cswew:p;if(e.browser.msie&&parseInt(e.browser.version)===7){var s=e(this).find("li.ul");if(s.length!==0){s.each(function(){e(this).css("width",e(this).parent().width())})}}});l=p}o.css("width",l);o.addClass("calc");return l}}function g(){var o=e(this),m=o.find(".sub"),l=e("#hdrnav").find("li.toplvl.active");l.addClass("sel");o.addClass("over");if(m&&m.length!==0){m.show();if(!(m).hasClass("calc")){var p=h(o);if(m.attr("id")==="ldtab"){var n=-1*(m.outerWidth()-2-(920-m.parent().first().position().left));if((e.browser.mozilla&&parseInt(e.browser.version)>=3)||(e.browser.msie&&parseInt(e.browser.version)===9)){n+=1}m.css("left",n)}}}}function k(){var m=e(this),l=m.find(".sub"),n=e("#hdrnav").find("li.toplvl.active");if(l){l.hide()}m.removeClass("over");n.removeClass("sel")}function j(l){if(l.target===this||l.target.parentElement===this){window.location.href=e(this).find("h2 a").attr("href")}}function i(){f();a();d();var o=e(this),m=o.find(".sub"),l=e("#hdrnav").find("li.toplvl.active");l.addClass("sel");o.addClass("over");if(m&&m.length!==0){m.show();if(!(m).hasClass("calc")){var p=h(o);if(m.attr("id")==="ldtab"){var n=-1*(m.outerWidth()-2-(920-m.parent().first().position().left));m.css("left",n)}}}}function a(){e("#hdrnav li.over .hdrtoplbl").unbind("touchstart");c();var m=e("#hdrnav li.over"),l=m.find(".sub"),n=e("#hdrnav").find("li.toplvl.active");if(l){l.hide()}m.removeClass("over");n.removeClass("sel")}function b(){a();d();e(this).children("ul").show()}function d(){e("#currentEdition li").has("ul").children("ul").hide()}function c(){var l=e("#hdrnav .hdrtoplbl h2 a");l.each(function(){var n=e(this),m=n.attr("href");if(n.data("href")===undefined){n.data("href",m)}n.attr("href","javascript:void(0);")})}function f(){setTimeout(function(){var m=e("#hdrnav li.over .hdrtoplbl h2 a"),l=m.data("href");if(l!==undefined){m.attr("href",l);if(e("#hdrnav li.over").find(".sub").length===0){window.location.href=l}else{e("#hdrnav li.over .hdrtoplbl").bind("touchstart",function(){window.location.href=l})}}},0)}e(document).ready(function(){if("ontouchstart" in document.documentElement){c();e("html").bind("touchstart",a);e("html").bind("touchstart",d);e("#hdrnav").bind("touchstart",function(m){m.stopPropagation()});var l=e("#currentEdition li").has("ul");l.bind("touchstart",function(m){m.stopPropagation()});l.bind("click",b);e("#hdrnav li.toplvl").bind("click",i)}else{e("#currentEdition").children("li").hover(function(){e(this).children("ul").show()},function(){e(this).children("ul").hide()});e("#hdrnav li.toplvl").hover(g,k);e("#hdrnav").delegate(".hdrtoplbl","click",j)}})})(jQuery);function setHideCookieMessageCookie(){$.cookie("cookiemsg","1",{expires:90,path:"/",domain:".travelzoo.com",secure:false})}function cookieMessageCloseButtonClick(){setHideCookieMessageCookie();$("#divCookieMessage").fadeOut("fast");return false};