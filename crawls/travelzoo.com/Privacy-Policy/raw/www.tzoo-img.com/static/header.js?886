(function(t){t.fn.calcSubWidth=function(){cswew=0;t(this).find("ul").each(function(){var a=t(this).outerWidth(true);if((t.browser.mozilla&&(navigator.platform.substr(0,3)==="Mac"))||(t.browser.msie&&parseInt(t.browser.version)===9)){a+=3}if(t.browser.mozilla&&parseInt(t.browser.version)>=4){a+=1}cswew+=a;if(t.browser.msie&&parseInt(t.browser.version)===6){t(this).css("width",t(this).width())}})};function v(g){var d=g.find(".sub"),a=g.outerWidth(true);if(d){var b=d.find(".row"),c=d.outerWidth(true),f=Math.floor(Math.abs(d.position().left)*1.5);if(b.length===0){d.calcSubWidth();if(c>=a){a=cswew}else{a=a-c+cswew+f;if((t.browser.mozilla&&(navigator.platform.substr(0,3)==="Mac"))||(t.browser.msie&&parseInt(t.browser.version)===9)){a-=f}}}else{var e=0;b.each(function(){t(this).calcSubWidth();e=(cswew>e)?cswew:e;if(t.browser.msie&&parseInt(t.browser.version)===7){var h=t(this).find("li.ul");if(h.length!==0){h.each(function(){t(this).css("width",t(this).parent().width())})}}});a=e}d.css("width",a);d.addClass("calc");return a}}function r(){var e=t(this),d=e.find(".sub"),a=t("#hdrnav").find("li.toplvl.active");a.addClass("sel");e.addClass("over");if(d&&d.length!==0){d.show();if(!(d).hasClass("calc")){var b=v(e);if(d.attr("id")==="ldtab"){var c=-1*(d.outerWidth()-2-(920-d.parent().first().position().left));if((t.browser.mozilla&&parseInt(t.browser.version)>=3)||(t.browser.msie&&parseInt(t.browser.version)===9)){c+=1}d.css("left",c)}}}}function u(){var b=t(this),a=b.find(".sub"),c=t("#hdrnav").find("li.toplvl.active");if(a){a.hide()}b.removeClass("over");c.removeClass("sel")}function l(a){if(a.target===this||a.target.parentElement===this){window.location.href=t(this).find("h2 a").attr("href")}}function m(){p();o();q();var e=t(this),d=e.find(".sub"),a=t("#hdrnav").find("li.toplvl.active");a.addClass("sel");e.addClass("over");if(d&&d.length!==0){d.show();if(!(d).hasClass("calc")){var b=v(e);if(d.attr("id")==="ldtab"){var c=-1*(d.outerWidth()-2-(920-d.parent().first().position().left));d.css("left",c)}}}}function o(){t("#hdrnav li.over .hdrtoplbl").unbind("touchstart");n();var b=t("#hdrnav li.over"),a=b.find(".sub"),c=t("#hdrnav").find("li.toplvl.active");if(a){a.hide()}b.removeClass("over");c.removeClass("sel")}function s(){o();q();t(this).children("ul").show()}function q(){t("#currentEdition li").has("ul").children("ul").hide()}function n(){var a=t("#hdrnav .hdrtoplbl h2 a");a.each(function(){var b=t(this),c=b.attr("href");if(b.data("href")===undefined){b.data("href",c)}b.attr("href","javascript:void(0);")})}function p(){setTimeout(function(){var b=t("#hdrnav li.over .hdrtoplbl h2 a"),a=b.data("href");if(a!==undefined){b.attr("href",a);if(t("#hdrnav li.over").find(".sub").length===0){window.location.href=a}else{t("#hdrnav li.over .hdrtoplbl").bind("touchstart",function(){window.location.href=a})}}},0)}t(document).ready(function(){if("ontouchstart" in document.documentElement){n();t("html").bind("touchstart",o);t("html").bind("touchstart",q);t("#hdrnav").bind("touchstart",function(b){b.stopPropagation()});var a=t("#currentEdition li").has("ul");a.bind("touchstart",function(b){b.stopPropagation()});a.bind("click",s);t("#hdrnav li.toplvl").bind("click",m)}else{t("#currentEdition").children("li").hover(function(){t(this).children("ul").show()},function(){t(this).children("ul").hide()});t("#hdrnav li.toplvl").hover(r,u);t("#hdrnav").delegate(".hdrtoplbl","click",l)}})})(jQuery);function setHideCookieMessageCookie(){$.cookie("cookiemsg","1",{expires:90,path:"/",domain:".travelzoo.com",secure:false})}function cookieMessageCloseButtonClick(){setHideCookieMessageCookie();$("#divCookieMessage").fadeOut("fast");return false};