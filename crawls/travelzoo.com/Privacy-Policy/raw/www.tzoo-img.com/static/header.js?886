(function(g){g.fn.calcSubWidth=function(){cswew=0;g(this).find("ul").each(function(){var l=g(this).outerWidth(true);if((g.browser.mozilla&&(navigator.platform.substr(0,3)==="Mac"))||(g.browser.msie&&parseInt(g.browser.version)===9)){l+=3}if(g.browser.mozilla&&parseInt(g.browser.version)>=4){l+=1}cswew+=l;if(g.browser.msie&&parseInt(g.browser.version)===6){g(this).css("width",g(this).width())}})};function k(r){var l=r.find(".sub"),p=r.outerWidth(true);if(l){var n=l.find(".row"),o=l.outerWidth(true),q=Math.floor(Math.abs(l.position().left)*1.5);if(n.length===0){l.calcSubWidth();if(o>=p){p=cswew}else{p=p-o+cswew+q;if((g.browser.mozilla&&(navigator.platform.substr(0,3)==="Mac"))||(g.browser.msie&&parseInt(g.browser.version)===9)){p-=q}}}else{var m=0;n.each(function(){g(this).calcSubWidth();m=(cswew>m)?cswew:m;if(g.browser.msie&&parseInt(g.browser.version)===7){var s=g(this).find("li.ul");if(s.length!==0){s.each(function(){g(this).css("width",g(this).parent().width())})}}});p=m}l.css("width",p);l.addClass("calc");return p}}function f(){var o=g(this),m=o.find(".sub"),l=g("#hdrnav").find("li.toplvl.active");l.addClass("sel");o.addClass("over");if(m&&m.length!==0){m.show();if(!(m).hasClass("calc")){var p=k(o);if(m.attr("id")==="ldtab"){var n=-1*(m.outerWidth()-2-(920-m.parent().first().position().left));if((g.browser.mozilla&&parseInt(g.browser.version)>=3)||(g.browser.msie&&parseInt(g.browser.version)===9)){n+=1}m.css("left",n)}}}}function e(){var m=g(this),l=m.find(".sub"),n=g("#hdrnav").find("li.toplvl.active");if(l){l.hide()}m.removeClass("over");n.removeClass("sel")}function b(l){if(l.target===this||l.target.parentElement===this){window.location.href=g(this).find("h2 a").attr("href")}}function h(){a();c();d();var o=g(this),m=o.find(".sub"),l=g("#hdrnav").find("li.toplvl.active");l.addClass("sel");o.addClass("over");if(m&&m.length!==0){m.show();if(!(m).hasClass("calc")){var p=k(o);if(m.attr("id")==="ldtab"){var n=-1*(m.outerWidth()-2-(920-m.parent().first().position().left));m.css("left",n)}}}}function c(){g("#hdrnav li.over .hdrtoplbl").unbind("touchstart");i();var m=g("#hdrnav li.over"),l=m.find(".sub"),n=g("#hdrnav").find("li.toplvl.active");if(l){l.hide()}m.removeClass("over");n.removeClass("sel")}function j(){c();d();g(this).children("ul").show()}function d(){g("#currentEdition li").has("ul").children("ul").hide()}function i(){var l=g("#hdrnav .hdrtoplbl h2 a");l.each(function(){var n=g(this),m=n.attr("href");if(n.data("href")===undefined){n.data("href",m)}n.attr("href","javascript:void(0);")})}function a(){setTimeout(function(){var m=g("#hdrnav li.over .hdrtoplbl h2 a"),l=m.data("href");if(l!==undefined){m.attr("href",l);if(g("#hdrnav li.over").find(".sub").length===0){window.location.href=l}else{g("#hdrnav li.over .hdrtoplbl").bind("touchstart",function(){window.location.href=l})}}},0)}g(document).ready(function(){if("ontouchstart" in document.documentElement){i();g("html").bind("touchstart",c);g("html").bind("touchstart",d);g("#hdrnav").bind("touchstart",function(m){m.stopPropagation()});var l=g("#currentEdition li").has("ul");l.bind("touchstart",function(m){m.stopPropagation()});l.bind("click",j);g("#hdrnav li.toplvl").bind("click",h)}else{g("#currentEdition").children("li").hover(function(){g(this).children("ul").show()},function(){g(this).children("ul").hide()});g("#hdrnav li.toplvl").hover(f,e);g("#hdrnav").delegate(".hdrtoplbl","click",b)}})})(jQuery);function setHideCookieMessageCookie(){$.cookie("cookiemsg","1",{expires:90,path:"/",domain:".travelzoo.com",secure:false})}function cookieMessageCloseButtonClick(){setHideCookieMessageCookie();$("#divCookieMessage").fadeOut("fast");return false};