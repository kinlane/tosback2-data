(function(u){u.fn.calcSubWidth=function(){cswew=0;u(this).find("ul").each(function(){var a=u(this).outerWidth(true);if((u.browser.mozilla&&(navigator.platform.substr(0,3)==="Mac"))||(u.browser.msie&&parseInt(u.browser.version)>=9)){a+=3}if(u.browser.mozilla&&parseInt(u.browser.version)>=4){a+=1}cswew+=a;if(u.browser.msie&&parseInt(u.browser.version)===6){u(this).css("width",u(this).width())}})};function m(d){var e=d.find(".sub"),f=d.outerWidth(true);if(e){var c=e.find(".row"),a=e.outerWidth(true),g=Math.floor(Math.abs(e.position().left)*1.5);if(c.length===0){e.calcSubWidth();if(a>=f){f=cswew}else{f=f-a+cswew+g;if((u.browser.mozilla&&(navigator.platform.substr(0,3)==="Mac"))||(u.browser.msie&&parseInt(u.browser.version)>=9)){f-=g}}}else{var b=0;c.each(function(){u(this).calcSubWidth();b=(cswew>b)?cswew:b;if(u.browser.msie&&parseInt(u.browser.version)===7){var h=u(this).find("li.ul");if(h.length!==0){h.each(function(){u(this).css("width",u(this).parent().width())})}}});f=b}e.css("width",f);e.addClass("calc")}return f}function t(){var e=u(this),d=e.find(".sub"),a=u("#hdrnav").find("li.toplvl.active");a.addClass("sel");e.addClass("over");if(d&&d.length!==0){d.show();if(!(d).hasClass("calc")){var b=m(e);if(d.attr("id")==="ldtab"){var c=-1*(d.outerWidth()-2-(920-d.parent().first().position().left));if((u.browser.mozilla&&parseInt(u.browser.version)>=3)||(u.browser.msie&&parseInt(u.browser.version)===9)){c+=1}d.css("left",c)}}}}function v(){var b=u(this),a=b.find(".sub"),c=u("#hdrnav").find("li.toplvl.active");if(a){a.hide()}b.removeClass("over");c.removeClass("sel")}function s(a){if(a.target===this||a.target.parentElement===this){window.location.href=u(this).find("h2 a").attr("href")}}function n(){r();p();q();var e=u(this),d=e.find(".sub"),a=u("#hdrnav").find("li.toplvl.active");a.addClass("sel");e.addClass("over");if(d&&d.length!==0){d.show();if(!(d).hasClass("calc")){var b=m(e);if(d.attr("id")==="ldtab"){var c=-1*(d.outerWidth()-2-(920-d.parent().first().position().left