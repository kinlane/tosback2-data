(function(v){v.fn.calcSubWidth=function(){cswew=0;v(this).find("ul").each(function(){var a=v(this).outerWidth(true);if((v.browser.mozilla&&(navigator.platform.substr(0,3)==="Mac"))||(v.browser.msie&&parseInt(v.browser.version)>=9)){a+=3}if(v.browser.mozilla&&parseInt(v.browser.version)>=4){a+=1}cswew+=a;if(v.browser.msie&&parseInt(v.browser.version)===6){v(this).css("width",v(this).width())}})};function n(f){var g=f.find(".sub"),c=f.outerWidth(true);if(g){var e=g.find(".row"),b=g.outerWidth(true),a=Math.floor(Math.abs(g.position().left)*1.5);if(e.length===0){g.calcSubWidth();if(b>=c){c=cswew}else{c=c-b+cswew+a;if((v.browser.mozilla&&(navigator.platform.substr(0,3)==="Mac"))||(v.browser.msie&&parseInt(v.browser.version)>=9)){c-=a}}}else{var d=0;e.each(function(){v(this).calcSubWidth();d=(cswew>d)?cswew:d;if(v.browser.msie&&parseInt(v.browser.version)===7){var h=v(this).find("li.ul");if(h.length!==0){h.each(function(){v(this).css("width",v(this).parent().width())})}}});c=d}g.css("width",c);g.addClass("calc")}return c}function u(){var e=v(this),d=e.find(".sub"),a=v("#hdrnav").find("li.toplvl.active");a.addClass("sel");e.addClass("over");if(d&&d.length!==0){d.show();if(!(d).hasClass("calc")){var b=n(e);if(d.attr("id")==="ldtab"){var c=-1*(d.outerWidth()-2-(920-d.parent().first().position().left));if((v.browser.mozilla&&parseInt(v.browser.version)>=3)||(v.browser.msie&&parseInt(v.browser.version)===9)){c+=1}d.css("left",c)}}}}function m(){var b=v(this),a=b.find(".sub"),c=v("#hdrnav").find("li.toplvl.active");if(a){a.hide()}b.removeClass("over");c.removeClass("sel")}function l(a){if(a.target===this||a.target.parentElement===this){window.location.href=v(this).find("h2 a").attr("href")}}function o(){t();r();q();var e=v(this),d=e.find(".sub"),a=v("#hdrnav").find("li.toplvl.active");a.addClass("sel");e.addClass("over");if(d&&d.length!==0){d.show();if(!(d).hasClass("calc")){var b=n(e);if(d.attr("id")==="ldtab"){var c=-1*(d.outerWidth()-2-(920-d.parent().first().position().left));d.css("left",c)}}}}function r(){v("#hdrnav li.over .hdrtoplbl").unbind("touchstart");p();var b=v("#hdrnav li.over"),a=b.find(".sub"),c=v("#hdrnav").find("li.toplvl.active");if(a){a.hide()}b.removeClass("over");c.removeClass("sel")}function s(){r();q();v(this).children("ul").show()}function q(){v("#currentEdition li").has("ul").children("ul").hide()}function p(){var a=v("#hdrnav .hdrtoplbl h2 a");a.each(function(){var b=v(this),c=b.attr("href");if(b.data("href")===undefined){b.data("href",c)}b.attr("href","javascript:void(0);")})}function t(){setTimeout(function(){var b=v("#hdrnav li.over .hdrtoplbl h2 a"),a=b.data("href");if(a!==undefined){b.attr("href",a);if(v("#hdrnav li.over").find(".sub").length===0){window.location.href=a}}},0)}v(document).ready(function(){if("ontouchstart" in document.documentElement){p();v("html").bind("touchstart",r);v("html").bind("touchstart",q);v("#hdrnav").bind("touchstart",function(b){b.stopPropagation()});var a=v("#currentEdition li").has("ul");a.bind("touchstart",function(b){b.stopPropagation()});a.bind("click",s);v("#hdrnav li.toplvl").bind("click",o)}else{v("#currentEdition").children("li").hover(function(){v(this).children("ul").show()},function(){v(this).children("ul").hide()});v("#hdrnav li.toplvl").hover(u,m);v("#hdrnav").delegate(".hdrtoplbl","click",l)}})})(jQuery);function setHideCookieMessageCookie(){$.cookie("cookiemsg","1",{expires:90,path:"/",domain:".travelzoo.com",secure:false})}function cookieMessageCloseButtonClick(){setHideCookieMessageCookie();$("#divCookieMessage").fadeOut("fast");return false};