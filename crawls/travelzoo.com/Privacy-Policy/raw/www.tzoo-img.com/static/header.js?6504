(function(c){c.fn.calcSubWidth=function(){cswew=0;c(this).find("ul").each(function(){var l=c(this).outerWidth(true);if((c.browser.mozilla&&(navigator.platform.substr(0,3)==="Mac"))||(c.browser.msie&&parseInt(c.browser.version)>=9)){l+=3}if(c.browser.mozilla&&parseInt(c.browser.version)>=4){l+=1}cswew+=l;if(c.browser.msie&&parseInt(c.browser.version)===6){c(this).css("width",c(this).width())}})};function f(n){var o=n.find(".sub"),l=n.outerWidth(true);if(o){var q=o.find(".row"),r=o.outerWidth(true),m=Math.floor(Math.abs(o.position().left)*1.5);if(q.length===0){o.calcSubWidth();if(r>=l){l=cswew}else{l=l-r+cswew+m;if((c.browser.mozilla&&(navigator.platform.substr(0,3)==="Mac"))||(c.browser.msie&&parseInt(c.browser.version)>=9)){l-=m}}}else{var s=0;q.each(function(){c(this).calcSubWidth();s=(cswew>s)?cswew:s;if(c.browser.msie&&parseInt(c.browser.version)===7){var p=c(this).find("li.ul");if(p.length!==0){p.each(function(){c(this).css("width",c(this).parent().width())})}}});l=s}o.css("width",l);o.addClass("calc")}return l}function i(){var m=c(this),p=m.find(".sub"),n=c("#hdrnav").find("li.toplvl.active");n.addClass("sel");m.addClass("over");if(p&&p.length!==0){p.show();if(!(p).hasClass("calc")){var o=f(m);if(p.attr("id")==="ldtab"){var q=-1*(p.outerWidth()-2-(920-p.parent().first().position().left));if((c.browser.mozilla&&parseInt(c.browser.version)>=3)||(c.browser.msie&&parseInt(c.browser.version)===9)){q+=1}p.css("left",q)}}}}function a(){var l=c(this),n=l.find(".sub"),m=c("#hdrnav").find("li.toplvl.active");if(n){n.hide()}l.removeClass("over");m.removeClass("sel")}function j(l){if(l.target===this||l.target.parentElement===this){window.location.href=c(this).find("h2 a").attr("href")}}function g(){h();k();d();var m=c(this),p=m.find(".sub"),n=c("#hdrnav").find("li.toplvl.active");n.addClass("sel");m.addClass("over");if(p&&p.length!==0){p.show();if(!(p).hasClass("calc")){var o=f(m);if(p.attr("id")==="ldtab"){var q=-1*(p.outerWidth()-2-(920-p.parent().first().position().left));p.css("left",q)}}}}function k(){c("#hdrnav li.over .hdrtoplbl").unbind("touchstart");e();var l=c("#hdrnav li.over"),n=l.find(".sub"),m=c("#hdrnav").find("li.toplvl.active");if(n){n.hide()}l.removeClass("over");m.removeClass("sel")}function b(){k();d();c(this).children("ul").show()}function d(){c("#currentEdition li").has("ul").children("ul").hide()}function e(){var l=c("#hdrnav .hdrtoplbl h2 a");l.each(function(){var n=c(this),m=n.attr("href");if(n.data("href")===undefined){n.data("href",m)}n.attr("href","javascript:void(0);")})}function h(){setTimeout(function(){var m=c("#hdrnav li.over .hdrtoplbl h2 a"),l=m.data("href");if(l!==undefined){m.attr("href",l);if(c("#hdrnav li.over").find(".sub").length===0){window.location.href=l}}},0)}c(document).ready(function(){if("ontouchstart" in document.documentElement){e();c("html").bind("touchstart",k);c("html").bind("touchstart",d);c("#hdrnav").bind("touchstart",function(m){m.stopPropagation()});var l=c("#currentEdition li").has("ul");l.bind("touchstart",function(m){m.stopPropagation()});l.bind("click",b);c("#hdrnav li.toplvl").bind("click",g)}else{c("#currentEdition").children("li").hover(function(){c(this).children("ul").show()},function(){c(this).children("ul").hide()});c("#hdrnav li.toplvl").hover(i,a);c("#hdrnav").delegate(".hdrtoplbl","click",j)}})})(jQuery);function setHideCookieMessageCookie(){$.cookie("cookiemsg","1",{expires:90,path:"/",domain:".travelzoo.com",secure:false})}function cookieMessageCloseButtonClick(){setHideCookieMessageCookie();$("#divCookieMessage").fadeOut("fast");return false};