(function(o){o.fn.calcSubWidth=function(){cswew=0;o(this).find("ul").each(function(){var a=o(this).outerWidth(true);if((o.browser.mozilla&&(navigator.platform.substr(0,3)==="Mac"))||(o.browser.msie&&parseInt(o.browser.version)>=9)){a+=3}if(o.browser.mozilla&&parseInt(o.browser.version)>=4){a+=1}cswew+=a;if(o.browser.msie&&parseInt(o.browser.version)===6){o(this).css("width",o(this).width())}})};function r(f){var g=f.find(".sub"),c=f.outerWidth(true);if(g){var e=g.find(".row"),b=g.outerWidth(true),a=Math.floor(Math.abs(g.position().left)*1.5);if(e.length===0){g.calcSubWidth();if(b>=c){c=cswew}else{c=c-b+cswew+a;if((o.browser.mozilla&&(navigator.platform.substr(0,3)==="Mac"))||(o.browser.msie&&parseInt(o.browser.version)>=9)){c-=a}}}else{var d=0;e.each(function(){o(this).calcSubWidth();d=(cswew>d)?cswew:d;if(o.browser.msie&&parseInt(o.browser.version)===7){var h=o(this).find("li.ul");if(h.length!==0){h.each(function(){o(this).css("width",o(this).parent().width())})}}});c=d}g.css("width",c);g.addClass("calc")}return c}function n(){var a=o(this),e=a.find(".sub"),d=o("#hdrnav").find("li.toplvl.active");d.addClass("sel");a.addClass("over");if(e&&e.length!==0){e.show();if(!(e).hasClass("calc")){var b=r(a);if(e.attr("id")==="ldtab"){var c=-1*(e.outerWidth()-2-(920-e.parent().first().position().left));if((o.browser.mozilla&&parseInt(o.browser.version)>=3)||(o.browser.msie&&parseInt(o.browser.version)===9)){c+=1}e.css("left",c)}}}}function p(){var c=o(this),b=c.find(".sub"),a=o("#hdrnav").find("li.toplvl.active");if(b){b.hide()}c.removeClass("over");a.removeClass("sel")}function s(a){if(a.target===this||a.target.parentElement===this){window.location.href=o(this).find("h2 a").attr("href")}}function t(){m();v();q();var a=o(this),e=a.find(".sub"),d=o("#hdrnav").find("li.toplvl.active");d.addClass("sel");a.addClass("over");if(e&&e.length!==0){e.show();if(!(e).hasClass("calc")){var b=r(a);if(e.attr("id")==="ldtab"){var c=-1*(e.outerWidth()-2-(920-e.parent().first().position().left