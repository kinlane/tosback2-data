(function(o){o.fn.calcSubWidth=function(){cswew=0;o(this).find("ul").each(function(){var a=o(this).outerWidth(true);if((o.browser.mozilla&&(navigator.platform.substr(0,3)==="Mac"))||(o.browser.msie&&parseInt(o.browser.version)>=9)){a+=3}if(o.browser.mozilla&&parseInt(o.browser.version)>=4){a+=1}cswew+=a;if(o.browser.msie&&parseInt(o.browser.version)===6){o(this).css("width",o(this).width())}})};function r(g){var d=g.find(".sub"),a=g.outerWidth(true);if(d){var b=d.find(".row"),c=d.outerWidth(true),f=Math.floor(Math.abs(d.position().left)*1.5);if(b.length===0){d.calcSubWidth();if(c>=a){a=cswew}else{a=a-c+cswew+f;if((o.browser.mozilla&&(navigator.platform.substr(0,3)==="Mac"))||(o.browser.msie&&parseInt(o.browser.version)>=9)){a-=f}}}else{var e=0;b.each(function(){o(this).calcSubWidth();e=(cswew>e)?cswew:e;if(o.browser.msie&&parseInt(o.browser.version)===7){var h=o(this).find("li.ul");if(h.length!==0){h.each(function(){o(this).css("width",o(this).parent().width())})}}});a=e}d.css("width",a);d.addClass("calc")}return a}function n(){var e=o(this),d=e.find(".sub"),a=o("#hdrnav").find("li.toplvl.active");a.addClass("sel");e.addClass("over");if(d&&d.length!==0){d.show();if(!(d).hasClass("calc")){var b=r(e);if(d.attr("id")==="ldtab"){var c=-1*(d.outerWidth()-2-(920-d.parent().first().position().left));if((o.browser.mozilla&&parseInt(o.browser.version)>=3)||(o.browser.msie&&parseInt(o.browser.version)===9)){c+=1}d.css("left",c)}}}}function p(){var b=o(this),a=b.find(".sub"),c=o("#hdrnav").find("li.toplvl.active");if(a){a.hide()}b.removeClass("over");c.removeClass("sel")}function s(a){if(a.target===this||a.target.parentElement===this){window.location.href=o(this).find("h2 a").attr("href")}}function t(){m();v();q();var e=o(this),d=e.find(".sub"),a=o("#hdrnav").find("li.toplvl.active");a.addClass("sel");e.addClass("over");if(d&&d.length!==0){d.show();if(!(d).hasClass("calc")){var b=r(e);if(d.attr("id")==="ldtab"){var c=-1*(d.outerWidth()-2-(920-d.parent().first().position().left));d.css("left",c)}}}}function v(){o("#hdrnav li.over .hdrtoplbl").unbind("touchstart");u();var b=o("#hdrnav li.over"),a=b.find(".sub"),c=o("#hdrnav").find("li.toplvl.active");if(a){a.hide()}b.removeClass("over");c.removeClass("sel")}function l(){v();q();o(this).children("ul").show()}function q(){o("#currentEdition li").has("ul").children("ul").hide()}function u(){var a=o("#hdrnav .hdrtoplbl h2 a");a.each(function(){var b=o(this),c=b.attr("href");if(b.data("href")===undefined){b.data("href",c)}b.attr("href","javascript:void(0);")})}function m(){setTimeout(function(){var b=o("#hdrnav li.over .hdrtoplbl h2 a"),a=b.data("href");if(a!==undefined){b.attr("href",a);if(o("#hdrnav li.over").find(".sub").length===0){window.location.href=a}}},0)}o(document).ready(function(){if("ontouchstart" in document.documentElement){u();o("html").bind("touchstart",v);o("html").bind("touchstart",q);o("#hdrnav").bind("touchstart",function(b){b.stopPropagation()});var a=o("#currentEdition li").has("ul");a.bind("touchstart",function(b){b.stopPropagation()});a.bind("click",l);o("#hdrnav li.toplvl").bind("click",t)}else{o("#currentEdition").children("li").hover(function(){o(this).children("ul").show()},function(){o(this).children("ul").hide()});o("#hdrnav li.toplvl").hover(n,p);o("#hdrnav").delegate(".hdrtoplbl","click",s)}})})(jQuery);function setHideCookieMessageCookie(){$.cookie("cookiemsg","1",{expires:90,path:"/",domain:".travelzoo.com",secure:false})}function cookieMessageCloseButtonClick(){setHideCookieMessageCookie();$("#divCookieMessage").fadeOut("fast");return false};