(function(i){i.fn.calcSubWidth=function(){cswew=0;i(this).find("ul").each(function(){var l=i(this).outerWidth(true);if((i.browser.mozilla&&(navigator.platform.substr(0,3)==="Mac"))||(i.browser.msie&&parseInt(i.browser.version)>=9)){l+=3}if(i.browser.mozilla&&parseInt(i.browser.version)>=4){l+=1}cswew+=l;if(i.browser.msie&&parseInt(i.browser.version)===6){i(this).css("width",i(this).width())}})};function a(r){var l=r.find(".sub"),p=r.outerWidth(true);if(l){var n=l.find(".row"),o=l.outerWidth(true),q=Math.floor(Math.abs(l.position().left)*1.5);if(n.length===0){l.calcSubWidth();if(o>=p){p=cswew}else{p=p-o+cswew+q;if((i.browser.mozilla&&(navigator.platform.substr(0,3)==="Mac"))||(i.browser.msie&&parseInt(i.browser.version)>=9)){p-=q}}}else{var m=0;n.each(function(){i(this).calcSubWidth();m=(cswew>m)?cswew:m;if(i.browser.msie&&parseInt(i.browser.version)===7){var s=i(this).find("li.ul");if(s.length!==0){s.each(function(){i(this).css("width",i(this).parent().width())})}}});p=m}l.css("width",p);l.addClass("calc")}return p}function h(){var m=i(this),l=m.find(".sub"),o=i("#hdrnav").find("li.toplvl.active");o.addClass("sel");m.addClass("over");if(l&&l.length!==0){l.show();if(!(l).hasClass("calc")){var p=a(m);if(l.attr("id")==="ldtab"){var n=-1*(l.outerWidth()-2-(920-l.parent().first().position().left));if((i.browser.mozilla&&parseInt(i.browser.version)>=3)||(i.browser.msie&&parseInt(i.browser.version)===9)){n+=1}l.css("left",n)}}}}function c(){var l=i(this),n=l.find(".sub"),m=i("#hdrnav").find("li.toplvl.active");if(n){n.hide()}l.removeClass("over");m.removeClass("sel")}function b(l){if(l.target===this||l.target.parentElement===this){window.location.href=i(this).find("h2 a").attr("href")}}function f(){k();e();d();var m=i(this),l=m.find(".sub"),o=i("#hdrnav").find("li.toplvl.active");o.addClass("sel");m.addClass("over");if(l&&l.length!==0){l.show();if(!(l).hasClass("calc")){var p=a(m);if(l.attr("id")==="ldtab"){var n=-1*(l.outerWidth()-2-(920-l.parent().first().position().left));l.css("left",n)}}}}function e(){i("#hdrnav li.over .hdrtoplbl").unbind("touchstart");g();var l=i("#hdrnav li.over"),n=l.find(".sub"),m=i("#hdrnav").find("li.toplvl.active");if(n){n.hide()}l.removeClass("over");m.removeClass("sel")}function j(){e();d();i(this).children("ul").show()}function d(){i("#currentEdition li").has("ul").children("ul").hide()}function g(){var l=i("#hdrnav .hdrtoplbl h2 a");l.each(function(){var n=i(this),m=n.attr("href");if(n.data("href")===undefined){n.data("href",m)}n.attr("href","javascript:void(0);")})}function k(){setTimeout(function(){var m=i("#hdrnav li.over .hdrtoplbl h2 a"),l=m.data("href");if(l!==undefined){m.attr("href",l);if(i("#hdrnav li.over").find(".sub").length===0){window.location.href=l}}},0)}i(document).ready(function(){if("ontouchstart" in document.documentElement){g();i("html").bind("touchstart",e);i("html").bind("touchstart",d);i("#hdrnav").bind("touchstart",function(m){m.stopPropagation()});var l=i("#currentEdition li").has("ul");l.bind("touchstart",function(m){m.stopPropagation()});l.bind("click",j);i("#hdrnav li.toplvl").bind("click",f)}else{i("#currentEdition").children("li").hover(function(){i(this).children("ul").show()},function(){i(this).children("ul").hide()});i("#hdrnav li.toplvl").hover(h,c);i("#hdrnav").delegate(".hdrtoplbl","click",b)}})})(jQuery);function setHideCookieMessageCookie(){$.cookie("cookiemsg","1",{expires:90,path:"/",domain:".travelzoo.com",secure:false})}function cookieMessageCloseButtonClick(){setHideCookieMessageCookie();$("#divCookieMessage").fadeOut("fast");return false};