(function(c){c.fn.calcSubWidth=function(){cswew=0;c(this).find("ul").each(function(){var l=c(this).outerWidth(true);if((c.browser.mozilla&&(navigator.platform.substr(0,3)==="Mac"))||(c.browser.msie&&parseInt(c.browser.version)>=9)){l+=3}if(c.browser.mozilla&&parseInt(c.browser.version)>=4){l+=1}cswew+=l;if(c.browser.msie&&parseInt(c.browser.version)===6){c(this).css("width",c(this).width())}})};function f(l){var m=l.find(".sub"),q=l.outerWidth(true);if(m){var o=m.find(".row"),p=m.outerWidth(true),r=Math.floor(Math.abs(m.position().left)*1.5);if(o.length===0){m.calcSubWidth();if(p>=q){q=cswew}else{q=q-p+cswew+r;if((c.browser.mozilla&&(navigator.platform.substr(0,3)==="Mac"))||(c.browser.msie&&parseInt(c.browser.version)>=9)){q-=r}}}else{var n=0;o.each(function(){c(this).calcSubWidth();n=(cswew>n)?cswew:n;if(c.browser.msie&&parseInt(c.browser.version)===7){var s=c(this).find("li.ul");if(s.length!==0){s.each(function(){c(this).css("width",c(this).parent().width())})}}});q=n}m.css("width",q);m.addClass("calc")}return q}function i(){var l=c(this),o=l.find(".sub"),m=c("#hdrnav").find("li.toplvl.active");m.addClass("sel");l.addClass("over");if(o&&o.length!==0){o.show();if(!(o).hasClass("calc")){var p=f(l);if(o.attr("id")==="ldtab"){var n=-1*(o.outerWidth()-2-(920-o.parent().first().position().left));if((c.browser.mozilla&&parseInt(c.browser.version)>=3)||(c.browser.msie&&parseInt(c.browser.version)===9)){n+=1}o.css("left",n)}}}}function a(){var n=c(this),m=n.find(".sub"),l=c("#hdrnav").find("li.toplvl.active");if(m){m.hide()}n.removeClass("over");l.removeClass("sel")}function j(l){if(l.target===this||l.target.parentElement===this){window.location.href=c(this).find("h2 a").attr("href")}}function g(){h();k();d();var l=c(this),o=l.find(".sub"),m=c("#hdrnav").find("li.toplvl.active");m.addClass("sel");l.addClass("over");if(o&&o.length!==0){o.show();if(!(o).hasClass("calc")){var p=f(l);if(o.attr("id")==="ldtab"){var n=-1*(o.outerWidth()-2-(920-o.parent().first().position().left));o.css("left",n)}}}}function k(){c("#hdrnav li.over .hdrtoplbl").unbind("touchstart");e();var n=c("#hdrnav li.over"),m=n.find(".sub"),l=c("#hdrnav").find("li.toplvl.active");if(m){m.hide()}n.removeClass("over");l.removeClass("sel")}function b(){k();d();c(this).children("ul").show()}function d(){c("#currentEdition li").has("ul").children("ul").hide()}function e(){var l=c("#hdrnav .hdrtoplbl h2 a");l.each(function(){var n=c(this),m=n.attr("href");if(n.data("href")===undefined){n.data("href",m)}n.attr("href","javascript:void(0);")})}function h(){setTimeout(function(){var m=c("#hdrnav li.over .hdrtoplbl h2 a"),l=m.data("href");if(l!==undefined){m.attr("href",l);if(c("#hdrnav li.over").find(".sub").length===0){window.location.href=l}}},0)}c(document).ready(function(){if("ontouchstart" in document.documentElement){e();c("html").bind("touchstart",k);c("html").bind("touchstart",d);c("#hdrnav").bind("touchstart",function(m){m.stopPropagation()});var l=c("#currentEdition li").has("ul");l.bind("touchstart",function(m){m.stopPropagation()});l.bind("click",b);c("#hdrnav li.toplvl").bind("click",g)}else{c("#currentEdition").children("li").hover(function(){c(this).children("ul").show()},function(){c(this).children("ul").hide()});c("#hdrnav li.toplvl").hover(i,a);c("#hdrnav").delegate(".hdrtoplbl","click",j)}})})(jQuery);function setHideCookieMessageCookie(){$.cookie("cookiemsg","1",{expires:90,path:"/",domain:".travelzoo.com",secure:false})}function cookieMessageCloseButtonClick(){setHideCookieMessageCookie();$("#divCookieMessage").fadeOut("fast");return false};