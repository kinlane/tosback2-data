    /**
     * Logging function
     * @param args Object to pass logging parameters, must be in this format:
     *  {
     *      section,    //Optional. Section this event belongs to, if not passed _e.section is used
     *      action,     //Required. Event action
     *      label       //Required. Event label
     *  }
     */
    l: function(args) {
        args = args || {};
        // console.log('sending event : ' + this.site + '/' + (args.section || this.section) + '*' + args.action + '*' + args.label);
        _gaq.push(['_trackEvent', this.site + '/' + (args.section || this.section), args.action, args.label]);
    },

    /**
     * Page view logging function
     * @param args Object to pass logging parameters, must be in this format:
     *  {
     *      site,       Optional
     *      section     Optional
     *  }
     */
    p: function(args) {
        args = args || {};
        // console.log('sending page view : ' + (args.site || this.site) + '/' + (args.section || this.section));
        _gaq.push(['_trackPageview', (args.site || this.site) + '/' + (args.section || this.section)]);
    }
};
