            if ( selected_cat == this.id ) {
                $(this).find('img').fadeIn();
                $(this).removeClass('hidden').addClass('block').show();
            } else {
                $(this).find('img').fadeOut();
                $(this).removeClass('block').addClass('hidden').hide();
            }
