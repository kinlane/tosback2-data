$(function() {

	$('.new-tooltip')
		.live('mouseover', function(){
			$(this).children('.new-tooltip-box').show(); 
		})
		.live('mouseout', function(){
			$(this).children('.new-tooltip-box').hide(); 
		});
	
	/* Action for closing tooltip  */
	$('.new-tooltip-close').live('click', function() {
		$(this).parents('.new-tooltip-box').hide();
		return false;
	});

});