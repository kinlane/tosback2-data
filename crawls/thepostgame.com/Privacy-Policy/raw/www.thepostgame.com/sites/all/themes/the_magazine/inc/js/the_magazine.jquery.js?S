function mce_success_dialog_cb(resp){
    $('#mce-success-response').hide();
    $('#mce-error-dialog-response').hide();
    if (resp.result=="success"){
        //$('#mce-'+resp.result+'-response').show();
        $('#mce-'+resp.result+'-response').html(resp.msg);

      // Hide signup dialog
      Drupal.TheMagazine.hideNewsletterSignUpDialog(msg);

      // Popup success message dialog
      Drupal.TheMagazine.showNewsletterSignUpSuccessDialog();

      // Clear form
      $('#mc-embedded-subscribe-dialog-form').each(function(){
           this.reset();
      });

    } else {
        var index = -1;
        var msg;
        try {
            var parts = resp.msg.split(' - ',2);
            if (parts[1]==undefined){
                msg = resp.msg;
            } else {
                i = parseInt(parts[0]);
                if (i.toString() == parts[0]){
                    index = parts[0];
                    msg = parts[1];
                } else {
                    index = -1;
                    msg = resp.msg;
                }
            }
        } catch(e){
            index = -1;
            msg = resp.msg;
        }
        try{
            if (index== -1){
                //$('#mce-'+resp.result+'-response').show();
                $('#mce-'+resp.result+'-response').html(msg);
            } else {
                err_id = 'mce_tmp_error_msg';
                html = '<div id="'+err_id+'" style="'+err_style+'"> '+msg+'</div>';

                var input_id = '#mc_embed_signup';
                var f = $(input_id);
                if (ftypes[index]=='address'){
                    input_id = '#mce-'+fnames[index]+'-addr1';
                    f = $(input_id).parent().parent().get(0);
                } else if (ftypes[index]=='date'){
                    input_id = '#mce-'+fnames[index]+'-month';
                    f = $(input_id).parent().parent().get(0);
                } else {
                    input_id = '#mce-'+fnames[index];
                    f = $().parent(input_id).get(0);
                }
                if (f){
                    $(f).append(html);
                    $(input_id).focus();
                } else {
                    //$('#mce-'+resp.result+'-response').show();
                    $('#mce-'+resp.result+'-response').html(msg);
                }
            }
        } catch(e){
            //$('#mce-'+resp.result+'-response').show();
            $('#mce-'+resp.result+'-response').html(msg);
        }

        msg = "Error found: " + msg + "</br>Please try again.";
        $('#mce-error-response').html(msg);
        $("#mce-error-response a").empty();
        $('#newsletterSignUpDialog #mce-error-response').show();
    }
}

/* Fields */
Drupal.TheMagazine.initFormFields = function()
{
	Drupal.TheMagazine.clearFormFields({
		clearInputs: true,
		clearTextareas: false,
		passwordFieldText: false,
		addClassFocus: "focus",
		filterClass: "default"
	});
};
Drupal.TheMagazine.clearFormFields = function(o)
{
	if (o.clearInputs == null) o.clearInputs = true;
	if (o.clearTextareas == null) o.clearTextareas = true;
	if (o.passwordFieldText == null) o.passwordFieldText = false;
	if (o.addClassFocus == null) o.addClassFocus = false;
	if (!o.filterClass) o.filterClass = "default";
	if(o.clearInputs) {
		var inputs = document.getElementsByTagName("input");
		for (var i = 0; i < inputs.length; i++ ) {
			if(((inputs[i].type == "text" || inputs[i].type == "password") && inputs[i].className.indexOf(o.filterClass) == -1) && (inputs[i].className == "text")) {
				inputs[i].valueHtml = inputs[i].value;
				inputs[i].onfocus = function ()	{
					if(this.valueHtml == this.value) this.value = "";
					if(this.fake) {
						inputsSwap(this, this.previousSibling);
						this.previousSibling.focus();
					}
					if(o.addClassFocus && !this.fake) {
						this.className += " " + o.addClassFocus;
						this.parentNode.className += " parent-" + o.addClassFocus;
					}
				}
				inputs[i].onblur = function () {
					if(this.value == "") {
						this.value = this.valueHtml;
						if(o.passwordFieldText && this.type == "password") inputsSwap(this, this.nextSibling);
					}
					if(o.addClassFocus) {
						this.className = this.className.replace(o.addClassFocus, "");
						this.parentNode.className = this.parentNode.className.replace("parent-"+o.addClassFocus, "");
					}
				}
				if(o.passwordFieldText && inputs[i].type == "password") {
					var fakeInput = document.createElement("input");
					fakeInput.type = "text";
					fakeInput.value = inputs[i].value;
					fakeInput.className = inputs[i].className;
					fakeInput.fake = true;
					inputs[i].parentNode.insertBefore(fakeInput, inputs[i].nextSibling);
					inputsSwap(inputs[i], null);
				}
			}
		}
	}
	if(o.clearTextareas) {
		var textareas = document.getElementsByTagName("textarea");
		for(var i=0; i<textareas.length; i++) {
			if(textareas[i].className.indexOf(o.filterClass) == -1) {
				textareas[i].valueHtml = textareas[i].value;
				textareas[i].onfocus = function() {
					if(this.value == this.valueHtml) this.value = "";
					if(o.addClassFocus) {
						this.className += " " + o.addClassFocus;
						this.parentNode.className += " parent-" + o.addClassFocus;
					}
				}
				textareas[i].onblur = function() {
					if(this.value == "") this.value = this.valueHtml;
					if(o.addClassFocus) {
						this.className = this.className.replace(o.addClassFocus, "");
						this.parentNode.className = this.parentNode.className.replace("parent-"+o.addClassFocus, "");
					}
				}
			}
		}
	}
	function inputsSwap(el, el2) {
		if(el) el.style.display = "none";
		if(el2) el2.style.display = "inline";
	}
};
Drupal.TheMagazine.resizeModalBackground = function()
{
   $("#pageModalDimmed").css("height", $(document).height());
   $("#pageModalDimmed").css("width", $(document).width());
};
Drupal.TheMagazine.setModalBackground = function()
{
   $("#pageModalDimmed").css("height", $(document).height());
   $("#pageModalDimmed").css("width", $(document).width());
};
Drupal.TheMagazine.scrollToTop = function()
{
   // Scroll to top of page
   if($.browser.safari)
      bodyelem = $("body");
   else
      bodyelem = $("html,body");
   bodyelem.scrollTop(0);
};

Drupal.TheMagazine.showLoading = function(loadingId, modalId)
{
    $(modalId).show();
    $(loadingId).show();
}
Drupal.TheMagazine.hideLoading = function(loadingId, modalId)
{
    $(loadingId).hide();
    $(modalId).hide();
}

Drupal.TheMagazine.htmlEscape = function(str) {
    return String(str)
            .replace(/&/g, '&amp;')
            .replace(/"/g, '&quot;')
            .replace(/'/g, "\\'")
            .replace(/</g, '&lt;')
            .replace(/>/g, '&gt;');
}
Drupal.TheMagazine.showFootnote = function(num)
{
    // Get footnote position
    var footnote_top = $("#footnote-" + num).position().top;
    var footnote_left = $("#footnote-" + num).position().left;

    // Get footnote popup height
    var footnote_popup_height = $("#footnote-popup-" + num).height() + 32;

    $("#footnote-popup-" + num).css({"top": (footnote_top - footnote_popup_height) + "px"});
    $("#footnote-popup-" + num).css({"left": (footnote_left - 142) + "px"});

    $("#footnote-popup-" + num).show();
}
Drupal.TheMagazine.isMobile = function()
{
    if( /android.+mobile|avantgo|bada\/|blackberry|blazer|compal|elaine|fennec|hiptop|iemobile|ip(hone|od)|iris|kindle|lge |maemo|meego.+mobile|midp|mmp|netfront|opera m(ob|in)i|palm( os)?|phone|p(ixi|re)\/|plucker|pocket|psp|series(4|6)0|symbian|treo|up\.(browser|link)|vodafone|wap|windows (ce|phone)|xda|xiino/i.test(navigator.userAgent))    {
        return true;
    }
    else
    {
        return false;
    }
}
Drupal.TheMagazine.goToMobileSite = function()
{
   var tpgViewDesktop = "tpg-view-desktop";
   // Set the cookie showing we want the desktop site

   var baseDomain = window.location.hostname.replace(/([a-zA-Z0-9]+.)/,"");

   $.cookie(tpgViewDesktop, "0", {domain: baseDomain, path: '/', expires: 3650});

   // Switch the m. to www. and redirect.
   var url = window.location.href;

   window.location = url.replace(/www\./gi, "m\.");
   return false;
}

