/*Created at: 04/08/13 04:21:49*/
(function(){var scope=SA.UsingNamespace("SA.Pages");scope.FAQ=new function(){var items,page;this.init=function(){items=$$('#content_wrapper ul li');page=location.hash.replace('#page=','');var item;for(i=0;i<items.length;i++){item=items[i];item.className=i%2?"answer":"question";item.innerHTML="<div class='inner'>"+item.innerHTML+"</div>";}
var wraps=$$('#content_wrapper ul');for(i=0;i<wraps.length;i++){item=wraps[i];item.className="faq_wrap";}
scope.FAQ.hideAllAnswers();scope.FAQ.triggerQuestions();if(page!=""&&$(page)){var h=$(page).cumulativeOffset().top-$('nav_container').getHeight();scrollTo(0,h);}}
this.hideAllAnswers=function(){var answers=$$('#content_wrapper ul li.answer');var questions=$$('#content_wrapper ul li.question');var item;for(i=0;i<answers.length;i++){answers[i].style.height=answers[i].getHeight()+'px';questions[i].addClassName('open');if(page!=''&&answers[i].parentNode.id==page)continue;answers[i].style.display='none';questions[i].addClassName('closed');questions[i].removeClassName('open');}}
this.triggerQuestions=function(){var questions=$$('#content_wrapper ul li.question');for(i=0;i<questions.length;i++){questions[i].onclick=scope.FAQ.clickQuestion;}}
var locked_slider=false;this.clickQuestion=function(){if(locked_slider)return;var question=this;while(question.tagName!="LI"||!question.hasClassName("question")){if(question.tagName=="BODY")return;question=question.parentNode;}
var answer=question.next("li.answer");if(answer.style.display=="none"){locked_slider=true;Effect.BlindDown(answer,{duration:0.6,afterFinish:function(){locked_slider=false;}});question.addClassName('open');question.removeClassName('closed');}else{locked_slider=true;Effect.BlindUp(answer,{duration:0.6,afterFinish:function(){question.addClassName('closed');question.removeClassName('open');locked_slider=false;}});}}};})();